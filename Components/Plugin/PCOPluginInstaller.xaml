<Window x:Class="Phobos.Components.Plugin.POPluginInstaller"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Phobos.Components.Plugin"
        mc:Ignorable="d"
        Title="插件管理中心" 
        Height="720" Width="1100"
        WindowStartupLocation="CenterScreen"
        Background="#0D1117"
        ResizeMode="CanResizeWithGrip">

    <Window.Resources>
        <!-- 颜色定义 -->
        <Color x:Key="PrimaryColor">#6366F1</Color>
        <Color x:Key="PrimaryHoverColor">#818CF8</Color>
        <Color x:Key="BackgroundDark">#0D1117</Color>
        <Color x:Key="CardBackground">#161B22</Color>
        <Color x:Key="CardHover">#1F2937</Color>
        <Color x:Key="BorderColor">#30363D</Color>
        <Color x:Key="TextPrimary">#F0F6FC</Color>
        <Color x:Key="TextSecondary">#8B949E</Color>
        <Color x:Key="SuccessColor">#3FB950</Color>
        <Color x:Key="WarningColor">#F59E0B</Color>
        <Color x:Key="DangerColor">#F85149</Color>

        <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource PrimaryColor}"/>
        <SolidColorBrush x:Key="PrimaryHoverBrush" Color="{StaticResource PrimaryHoverColor}"/>
        <SolidColorBrush x:Key="BackgroundDarkBrush" Color="{StaticResource BackgroundDark}"/>
        <SolidColorBrush x:Key="CardBackgroundBrush" Color="{StaticResource CardBackground}"/>
        <SolidColorBrush x:Key="CardHoverBrush" Color="{StaticResource CardHover}"/>
        <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource BorderColor}"/>
        <SolidColorBrush x:Key="TextPrimaryBrush" Color="{StaticResource TextPrimary}"/>
        <SolidColorBrush x:Key="TextSecondaryBrush" Color="{StaticResource TextSecondary}"/>
        <SolidColorBrush x:Key="SuccessBrush" Color="{StaticResource SuccessColor}"/>
        <SolidColorBrush x:Key="WarningBrush" Color="{StaticResource WarningColor}"/>
        <SolidColorBrush x:Key="DangerBrush" Color="{StaticResource DangerColor}"/>

        <!-- 主按钮样式 -->
        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="16,10"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}" 
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource PrimaryHoverBrush}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.9"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- 次要按钮样式 -->
        <Style x:Key="SecondaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="16,10"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource CardHoverBrush}"/>
                                <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- 危险按钮样式 -->
        <Style x:Key="DangerButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource DangerBrush}"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="16,10"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="{StaticResource DangerBrush}"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource DangerBrush}"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- 搜索框样式 -->
        <Style x:Key="SearchBoxStyle" TargetType="TextBox">
            <Setter Property="Background" Value="{StaticResource CardBackgroundBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="CaretBrush" Value="{StaticResource TextPrimaryBrush}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <!-- 搜索图标 -->
                                <TextBlock Grid.Column="0" 
                                           Text="🔍" 
                                           FontSize="14"
                                           Foreground="{StaticResource TextSecondaryBrush}"
                                           VerticalAlignment="Center"
                                           Margin="12,0,0,0"/>
                                <ScrollViewer x:Name="PART_ContentHost" 
                                              Grid.Column="1"
                                              Margin="8,0,12,0"
                                              VerticalAlignment="Center"/>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="{StaticResource PrimaryBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- 分类标签样式 -->
        <Style x:Key="CategoryTagStyle" TargetType="RadioButton">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="14,8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}"
                                CornerRadius="20"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource PrimaryBrush}"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource CardHoverBrush}"/>
                            </Trigger>
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="IsChecked" Value="True"/>
                                    <Condition Property="IsMouseOver" Value="True"/>
                                </MultiTrigger.Conditions>
                                <Setter TargetName="border" Property="Background" Value="{StaticResource PrimaryHoverBrush}"/>
                            </MultiTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- 插件卡片样式 -->
        <Style x:Key="PluginCardStyle" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource CardBackgroundBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="20"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource CardHoverBrush}"/>
                    <Setter Property="BorderBrush" Value="{StaticResource PrimaryBrush}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- 状态标签样式 -->
        <Style x:Key="StatusBadgeInstalled" TargetType="Border">
            <Setter Property="Background" Value="#1A3FB950"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Padding" Value="8,4"/>
        </Style>

        <Style x:Key="StatusBadgeUpdate" TargetType="Border">
            <Setter Property="Background" Value="#1AF59E0B"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Padding" Value="8,4"/>
        </Style>

        <!-- 滚动条样式 -->
        <Style TargetType="ScrollBar">
            <Setter Property="Width" Value="8"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ScrollBar">
                        <Grid>
                            <Track x:Name="PART_Track" IsDirectionReversed="True">
                                <Track.Thumb>
                                    <Thumb>
                                        <Thumb.Template>
                                            <ControlTemplate TargetType="Thumb">
                                                <Border Background="{StaticResource BorderBrush}" 
                                                        CornerRadius="4"
                                                        Margin="2"/>
                                            </ControlTemplate>
                                        </Thumb.Template>
                                    </Thumb>
                                </Track.Thumb>
                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="260"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- 左侧边栏 -->
        <Border Grid.Column="0" 
                Background="{StaticResource CardBackgroundBrush}"
                BorderBrush="{StaticResource BorderBrush}"
                BorderThickness="0,0,1,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Logo 区域 -->
                <StackPanel Grid.Row="0" Margin="24,28,24,24">
                    <StackPanel Orientation="Horizontal">
                        <Border Width="40" Height="40" CornerRadius="10" Background="{StaticResource PrimaryBrush}">
                            <TextBlock Text="🧩" FontSize="20" 
                                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <StackPanel Margin="12,0,0,0" VerticalAlignment="Center">
                            <TextBlock Text="插件中心" 
                                       FontSize="18" FontWeight="Bold"
                                       Foreground="{StaticResource TextPrimaryBrush}"/>
                            <TextBlock Text="Plugin Manager" 
                                       FontSize="11"
                                       Foreground="{StaticResource TextSecondaryBrush}"/>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>

                <!-- 导航菜单 -->
                <StackPanel Grid.Row="1" Margin="16,0,16,16">
                    <RadioButton GroupName="NavMenu" IsChecked="True" Style="{StaticResource CategoryTagStyle}"
                                 HorizontalAlignment="Stretch" Margin="0,2">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="🏠" Margin="0,0,10,0"/>
                            <TextBlock Text="发现插件"/>
                        </StackPanel>
                    </RadioButton>
                    <RadioButton GroupName="NavMenu" Style="{StaticResource CategoryTagStyle}"
                                 HorizontalAlignment="Stretch" Margin="0,2">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="📦" Margin="0,0,10,0"/>
                            <TextBlock Text="已安装"/>
                            <Border Background="{StaticResource PrimaryBrush}" CornerRadius="10" 
                                    Padding="8,2" Margin="8,0,0,0">
                                <TextBlock Text="12" FontSize="11" Foreground="White"/>
                            </Border>
                        </StackPanel>
                    </RadioButton>
                    <RadioButton GroupName="NavMenu" Style="{StaticResource CategoryTagStyle}"
                                 HorizontalAlignment="Stretch" Margin="0,2">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="🔄" Margin="0,0,10,0"/>
                            <TextBlock Text="可更新"/>
                            <Border Background="{StaticResource WarningBrush}" CornerRadius="10" 
                                    Padding="8,2" Margin="8,0,0,0">
                                <TextBlock Text="3" FontSize="11" Foreground="White"/>
                            </Border>
                        </StackPanel>
                    </RadioButton>
                    <RadioButton GroupName="NavMenu" Style="{StaticResource CategoryTagStyle}"
                                 HorizontalAlignment="Stretch" Margin="0,2">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="⭐" Margin="0,0,10,0"/>
                            <TextBlock Text="收藏"/>
                        </StackPanel>
                    </RadioButton>
                </StackPanel>

                <!-- 分类区域 -->
                <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto" Margin="16,0">
                    <StackPanel>
                        <TextBlock Text="分类" 
                                   FontSize="12" FontWeight="SemiBold"
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   Margin="8,8,0,12"/>

                        <RadioButton GroupName="Category" Style="{StaticResource CategoryTagStyle}"
                                     HorizontalAlignment="Stretch" Margin="0,1" Content="全部"/>
                        <RadioButton GroupName="Category" Style="{StaticResource CategoryTagStyle}"
                                     HorizontalAlignment="Stretch" Margin="0,1" Content="🎨 主题外观"/>
                        <RadioButton GroupName="Category" Style="{StaticResource CategoryTagStyle}"
                                     HorizontalAlignment="Stretch" Margin="0,1" Content="💻 开发工具"/>
                        <RadioButton GroupName="Category" Style="{StaticResource CategoryTagStyle}"
                                     HorizontalAlignment="Stretch" Margin="0,1" Content="📊 数据分析"/>
                        <RadioButton GroupName="Category" Style="{StaticResource CategoryTagStyle}"
                                     HorizontalAlignment="Stretch" Margin="0,1" Content="🔧 效率工具"/>
                        <RadioButton GroupName="Category" Style="{StaticResource CategoryTagStyle}"
                                     HorizontalAlignment="Stretch" Margin="0,1" Content="🌐 网络工具"/>
                        <RadioButton GroupName="Category" Style="{StaticResource CategoryTagStyle}"
                                     HorizontalAlignment="Stretch" Margin="0,1" Content="🔒 安全隐私"/>
                    </StackPanel>
                </ScrollViewer>

                <!-- 底部本地安装 -->
                <Border Grid.Row="3" 
                        Background="{StaticResource BackgroundDarkBrush}"
                        BorderBrush="{StaticResource BorderBrush}"
                        BorderThickness="0,1,0,0"
                        Padding="16">
                    <Button Style="{StaticResource SecondaryButtonStyle}" 
                            HorizontalAlignment="Stretch">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="📁" Margin="0,0,8,0"/>
                            <TextBlock Text="从本地安装..."/>
                        </StackPanel>
                    </Button>
                </Border>
            </Grid>
        </Border>

        <!-- 主内容区 -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- 顶部搜索栏 -->
            <Border Grid.Row="0" 
                    Background="{StaticResource CardBackgroundBrush}"
                    BorderBrush="{StaticResource BorderBrush}"
                    BorderThickness="0,0,0,1"
                    Padding="24,16">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBox Grid.Column="0" 
                             Style="{StaticResource SearchBoxStyle}"
                             Text="" 
                             MaxWidth="500"
                             HorizontalAlignment="Left"
                             Width="400"/>

                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                        <Button Style="{StaticResource SecondaryButtonStyle}" Margin="0,0,8,0">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="🔄" Margin="0,0,6,0"/>
                                <TextBlock Text="刷新"/>
                            </StackPanel>
                        </Button>
                        <Button Style="{StaticResource SecondaryButtonStyle}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="⚙️" Margin="0,0,6,0"/>
                                <TextBlock Text="设置"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- 插件列表 -->
            <ScrollViewer Grid.Row="1" 
                          VerticalScrollBarVisibility="Auto"
                          Padding="24">
                <StackPanel>
                    <!-- 推荐区域 -->
                    <TextBlock Text="🔥 热门推荐" 
                               FontSize="16" FontWeight="SemiBold"
                               Foreground="{StaticResource TextPrimaryBrush}"
                               Margin="0,8,0,16"/>

                    <!-- 插件网格 -->
                    <ItemsControl>
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.Items>
                            <!-- 插件卡片 1 -->
                            <Border Style="{StaticResource PluginCardStyle}" 
                                    Width="340" Margin="0,0,16,16" Cursor="Hand">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <!-- 头部 -->
                                    <Grid Grid.Row="0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <Border Grid.Column="0" 
                                                Width="48" Height="48" 
                                                CornerRadius="12"
                                                Background="#1E40AF">
                                            <TextBlock Text="🎨" FontSize="24"
                                                       HorizontalAlignment="Center" 
                                                       VerticalAlignment="Center"/>
                                        </Border>

                                        <StackPanel Grid.Column="1" Margin="14,0,0,0" VerticalAlignment="Center">
                                            <TextBlock Text="Dark Theme Pro" 
                                                       FontSize="15" FontWeight="SemiBold"
                                                       Foreground="{StaticResource TextPrimaryBrush}"/>
                                            <TextBlock Text="v2.4.1 · ThemeLab" 
                                                       FontSize="12"
                                                       Foreground="{StaticResource TextSecondaryBrush}"
                                                       Margin="0,2,0,0"/>
                                        </StackPanel>

                                        <Border Grid.Column="2" Style="{StaticResource StatusBadgeInstalled}">
                                            <TextBlock Text="已安装" FontSize="11" 
                                                       Foreground="{StaticResource SuccessBrush}"/>
                                        </Border>
                                    </Grid>

                                    <!-- 描述 -->
                                    <TextBlock Grid.Row="1" 
                                               Text="专业级深色主题，支持自定义配色方案，护眼模式，以及多种预设风格。" 
                                               FontSize="13"
                                               Foreground="{StaticResource TextSecondaryBrush}"
                                               TextWrapping="Wrap"
                                               Margin="0,14,0,0"
                                               LineHeight="20"/>

                                    <!-- 标签 -->
                                    <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,12,0,0">
                                        <Border Background="#1A6366F1" CornerRadius="4" Padding="8,4" Margin="0,0,6,0">
                                            <TextBlock Text="主题" FontSize="11" Foreground="{StaticResource PrimaryBrush}"/>
                                        </Border>
                                        <Border Background="#1A6366F1" CornerRadius="4" Padding="8,4">
                                            <TextBlock Text="外观" FontSize="11" Foreground="{StaticResource PrimaryBrush}"/>
                                        </Border>
                                    </StackPanel>

                                    <!-- 底部 -->
                                    <Grid Grid.Row="3" Margin="0,16,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Grid.Column="0" Orientation="Horizontal">
                                            <TextBlock Text="⬇️" FontSize="12"/>
                                            <TextBlock Text="128K" FontSize="12" 
                                                       Foreground="{StaticResource TextSecondaryBrush}"
                                                       Margin="4,0,16,0"/>
                                            <TextBlock Text="⭐" FontSize="12"/>
                                            <TextBlock Text="4.9" FontSize="12" 
                                                       Foreground="{StaticResource TextSecondaryBrush}"
                                                       Margin="4,0,0,0"/>
                                        </StackPanel>

                                        <Button Grid.Column="1" 
                                                Style="{StaticResource DangerButtonStyle}"
                                                Padding="12,6"
                                                Content="卸载"/>
                                    </Grid>
                                </Grid>
                            </Border>

                            <!-- 插件卡片 2 -->
                            <Border Style="{StaticResource PluginCardStyle}" 
                                    Width="340" Margin="0,0,16,16" Cursor="Hand">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <Grid Grid.Row="0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <Border Grid.Column="0" 
                                                Width="48" Height="48" 
                                                CornerRadius="12"
                                                Background="#059669">
                                            <TextBlock Text="📊" FontSize="24"
                                                       HorizontalAlignment="Center" 
                                                       VerticalAlignment="Center"/>
                                        </Border>

                                        <StackPanel Grid.Column="1" Margin="14,0,0,0" VerticalAlignment="Center">
                                            <TextBlock Text="Data Visualizer" 
                                                       FontSize="15" FontWeight="SemiBold"
                                                       Foreground="{StaticResource TextPrimaryBrush}"/>
                                            <TextBlock Text="v3.1.0 · DataWorks" 
                                                       FontSize="12"
                                                       Foreground="{StaticResource TextSecondaryBrush}"
                                                       Margin="0,2,0,0"/>
                                        </StackPanel>

                                        <Border Grid.Column="2" Style="{StaticResource StatusBadgeUpdate}">
                                            <TextBlock Text="可更新" FontSize="11" 
                                                       Foreground="{StaticResource WarningBrush}"/>
                                        </Border>
                                    </Grid>

                                    <TextBlock Grid.Row="1" 
                                               Text="强大的数据可视化工具，支持图表、仪表盘、实时数据流展示。" 
                                               FontSize="13"
                                               Foreground="{StaticResource TextSecondaryBrush}"
                                               TextWrapping="Wrap"
                                               Margin="0,14,0,0"
                                               LineHeight="20"/>

                                    <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,12,0,0">
                                        <Border Background="#1A059669" CornerRadius="4" Padding="8,4" Margin="0,0,6,0">
                                            <TextBlock Text="数据" FontSize="11" Foreground="#059669"/>
                                        </Border>
                                        <Border Background="#1A059669" CornerRadius="4" Padding="8,4">
                                            <TextBlock Text="图表" FontSize="11" Foreground="#059669"/>
                                        </Border>
                                    </StackPanel>

                                    <Grid Grid.Row="3" Margin="0,16,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Grid.Column="0" Orientation="Horizontal">
                                            <TextBlock Text="⬇️" FontSize="12"/>
                                            <TextBlock Text="89K" FontSize="12" 
                                                       Foreground="{StaticResource TextSecondaryBrush}"
                                                       Margin="4,0,16,0"/>
                                            <TextBlock Text="⭐" FontSize="12"/>
                                            <TextBlock Text="4.7" FontSize="12" 
                                                       Foreground="{StaticResource TextSecondaryBrush}"
                                                       Margin="4,0,0,0"/>
                                        </StackPanel>

                                        <Button Grid.Column="1" 
                                                Style="{StaticResource PrimaryButtonStyle}"
                                                Padding="12,6"
                                                Content="更新"/>
                                    </Grid>
                                </Grid>
                            </Border>

                            <!-- 插件卡片 3 -->
                            <Border Style="{StaticResource PluginCardStyle}" 
                                    Width="340" Margin="0,0,16,16" Cursor="Hand">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <Grid Grid.Row="0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <Border Grid.Column="0" 
                                                Width="48" Height="48" 
                                                CornerRadius="12"
                                                Background="#DC2626">
                                            <TextBlock Text="🔧" FontSize="24"
                                                       HorizontalAlignment="Center" 
                                                       VerticalAlignment="Center"/>
                                        </Border>

                                        <StackPanel Grid.Column="1" Margin="14,0,0,0" VerticalAlignment="Center">
