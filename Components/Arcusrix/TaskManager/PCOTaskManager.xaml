<UserControl x:Class="Phobos.Components.Arcusrix.TaskManager.PCOTaskManager"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="900">

    <UserControl.Resources>
        <!-- Navigation Item Style -->
        <Style x:Key="NavItemStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{DynamicResource Foreground3Brush}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Height" Value="44"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                Margin="6,2">
                            <Grid>
                                <!-- Active Indicator -->
                                <Border x:Name="indicator"
                                        Width="3" Height="20"
                                        CornerRadius="2"
                                        Background="{DynamicResource PrimaryBrush}"
                                        HorizontalAlignment="Left"
                                        Margin="-3,0,0,0"
                                        Opacity="0"/>
                                <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                  VerticalAlignment="Center"
                                                  Margin="12,0"/>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{DynamicResource Background3Brush}"/>
                                <Setter Property="Foreground" Value="{DynamicResource Foreground1Brush}"/>
                            </Trigger>
                            <Trigger Property="Tag" Value="Active">
                                <Setter TargetName="border" Property="Background" Value="{DynamicResource Background3Brush}"/>
                                <Setter Property="Foreground" Value="{DynamicResource PrimaryBrush}"/>
                                <Setter TargetName="indicator" Property="Opacity" Value="1"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Hamburger Button Style -->
        <Style x:Key="HamburgerButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{DynamicResource Foreground2Brush}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Width" Value="40"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{DynamicResource Background3Brush}"/>
                                <Setter Property="Foreground" Value="{DynamicResource Foreground1Brush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- List Item Card Style -->
        <Style x:Key="ListItemCardStyle" TargetType="Border">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Setter Property="Padding" Value="16,12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{DynamicResource Background3Brush}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <!-- Navigation Panel -->
            <ColumnDefinition x:Name="NavColumn" Width="220"/>
            <!-- Content Area -->
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Left Navigation Panel -->
        <Border Grid.Column="0"
                Background="{DynamicResource Background1Brush}"
                BorderBrush="{DynamicResource BorderBrush}"
                BorderThickness="0,0,1,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Header with Hamburger Menu -->
                <Grid Grid.Row="0" Margin="8,12,8,8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Button x:Name="HamburgerButton"
                            Style="{StaticResource HamburgerButtonStyle}"
                            Click="HamburgerButton_Click">
                        <TextBlock x:Name="HamburgerIcon"
                                   Text="&#xE700;"
                                   FontFamily="Segoe MDL2 Assets"
                                   FontSize="16"/>
                    </Button>

                    <TextBlock x:Name="NavTitle"
                               Grid.Column="1"
                               Text="Task Manager"
                               FontSize="16"
                               FontWeight="SemiBold"
                               VerticalAlignment="Center"
                               Margin="12,0,0,0"
                               Foreground="{DynamicResource Foreground1Brush}"/>
                </Grid>

                <!-- Navigation Items -->
                <StackPanel x:Name="NavPanel" Grid.Row="1" Margin="0,8,0,0">
                    <!-- Running Plugins Tab -->
                    <Button x:Name="NavRunningPlugins"
                            Style="{StaticResource NavItemStyle}"
                            Tag="Active"
                            Click="TabRunningPlugins_Click">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock x:Name="IconRunning"
                                       Text="&#xE768;"
                                       FontFamily="Segoe MDL2 Assets"
                                       FontSize="16"
                                       VerticalAlignment="Center"
                                       Width="24"/>
                            <TextBlock x:Name="LabelRunning"
                                       Text="Running Plugins"
                                       FontSize="14"
                                       VerticalAlignment="Center"
                                       Margin="8,0,0,0"/>
                        </StackPanel>
                    </Button>

                    <!-- Startup Items Tab -->
                    <Button x:Name="NavStartupItems"
                            Style="{StaticResource NavItemStyle}"
                            Click="TabStartup_Click">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock x:Name="IconStartup"
                                       Text="&#xE7E8;"
                                       FontFamily="Segoe MDL2 Assets"
                                       FontSize="16"
                                       VerticalAlignment="Center"
                                       Width="24"/>
                            <TextBlock x:Name="LabelStartup"
                                       Text="Startup Items"
                                       FontSize="14"
                                       VerticalAlignment="Center"
                                       Margin="8,0,0,0"/>
                        </StackPanel>
                    </Button>
                </StackPanel>

                <!-- Status Bar at Bottom -->
                <Border Grid.Row="2" Padding="12,8" Margin="6">
                    <TextBlock x:Name="StatusText"
                               Text="Ready"
                               FontSize="11"
                               Foreground="{DynamicResource Foreground4Brush}"
                               TextTrimming="CharacterEllipsis"/>
                </Border>
            </Grid>
        </Border>

        <!-- Content Area -->
        <Grid Grid.Column="1" Background="{DynamicResource Background1Brush}">
            <!-- Running Plugins Page -->
            <Grid x:Name="PageRunningPlugins">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <Grid Grid.Row="0" Margin="24,20,24,16">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Title Row -->
                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel>
                            <TextBlock x:Name="TitleRunningPlugins"
                                       Text="Running Plugins"
                                       FontSize="22"
                                       FontWeight="Bold"
                                       Foreground="{DynamicResource Foreground1Brush}"/>
                            <TextBlock x:Name="RunningCountText"
                                       Text="0 plugins running"
                                       FontSize="13"
                                       Margin="0,4,0,0"
                                       Foreground="{DynamicResource Foreground4Brush}"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1"
                                    Orientation="Horizontal"
                                    VerticalAlignment="Center">
                            <Button x:Name="BtnRefreshPlugins"
                                    Style="{DynamicResource PhobosButtonSecondary}"
                                    Click="BtnRefreshPlugins_Click">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="&#xE72C;"
                                               FontFamily="Segoe MDL2 Assets"
                                               FontSize="12"
                                               VerticalAlignment="Center"/>
                                    <TextBlock x:Name="BtnRefreshPluginsText"
                                               Text="Refresh"
                                               Margin="6,0,0,0"/>
                                </StackPanel>
                            </Button>
                            <Button x:Name="BtnEndTask"
                                    Style="{DynamicResource PhobosButtonDanger}"
                                    Margin="8,0,0,0"
                                    IsEnabled="False"
                                    Click="BtnEndTask_Click">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="&#xE711;"
                                               FontFamily="Segoe MDL2 Assets"
                                               FontSize="12"
                                               VerticalAlignment="Center"/>
                                    <TextBlock x:Name="BtnEndTaskText"
                                               Text="End Task"
                                               Margin="6,0,0,0"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </Grid>
                </Grid>

                <!-- Plugin List -->
                <Border Grid.Row="1" Margin="24,0,24,24">
                    <Border Background="{DynamicResource Background2Brush}"
                            BorderBrush="{DynamicResource BorderBrush}"
                            BorderThickness="1"
                            CornerRadius="8">
                        <Grid>
                            <Grid.RowDefinitions>
                                <!-- Table Header -->
                                <RowDefinition Height="44"/>
                                <!-- Data -->
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <!-- Table Header -->
                            <Border Grid.Row="0"
                                    BorderBrush="{DynamicResource BorderBrush}"
                                    BorderThickness="0,0,0,1"
                                    Padding="16,0">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="180"/>
                                        <ColumnDefinition Width="100"/>
                                        <ColumnDefinition Width="100"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock x:Name="HeaderPluginName"
                                               Grid.Column="0"
                                               Text="Plugin Name"
                                               Foreground="{DynamicResource Foreground3Brush}"
                                               FontSize="12"
                                               FontWeight="Medium"
                                               VerticalAlignment="Center"/>
                                    <TextBlock x:Name="HeaderPackageName"
                                               Grid.Column="1"
                                               Text="Package"
                                               Foreground="{DynamicResource Foreground3Brush}"
                                               FontSize="12"
                                               FontWeight="Medium"
                                               VerticalAlignment="Center"/>
                                    <TextBlock x:Name="HeaderStatus"
                                               Grid.Column="2"
                                               Text="Status"
                                               Foreground="{DynamicResource Foreground3Brush}"
                                               FontSize="12"
                                               FontWeight="Medium"
                                               VerticalAlignment="Center"/>
                                    <TextBlock x:Name="HeaderMemory"
                                               Grid.Column="3"
                                               Text="Memory"
                                               Foreground="{DynamicResource Foreground3Brush}"
                                               FontSize="12"
                                               FontWeight="Medium"
                                               VerticalAlignment="Center"/>
                                </Grid>
                            </Border>

                            <!-- Data List -->
                            <ScrollViewer Grid.Row="1"
                                          VerticalScrollBarVisibility="Auto"
                                          HorizontalScrollBarVisibility="Disabled">
                                <ItemsControl x:Name="RunningPluginsList">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border x:Name="ItemBorder"
                                                    Style="{StaticResource ListItemCardStyle}"
                                                    MouseLeftButtonDown="PluginItem_Click">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="180"/>
                                                        <ColumnDefinition Width="100"/>
                                                        <ColumnDefinition Width="100"/>
                                                    </Grid.ColumnDefinitions>
                                                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                                                        <Border Width="32" Height="32"
                                                                CornerRadius="6"
                                                                Background="{DynamicResource Background4Brush}"
                                                                Margin="0,0,12,0">
                                                            <TextBlock Text="&#xEA86;"
                                                                       FontFamily="Segoe MDL2 Assets"
                                                                       FontSize="14"
                                                                       Foreground="{DynamicResource Foreground3Brush}"
                                                                       HorizontalAlignment="Center"
                                                                       VerticalAlignment="Center"/>
                                                        </Border>
                                                        <TextBlock Text="{Binding Name}"
                                                                   Foreground="{DynamicResource Foreground1Brush}"
                                                                   FontSize="14"
                                                                   VerticalAlignment="Center"/>
                                                    </StackPanel>
                                                    <TextBlock Grid.Column="1"
                                                               Text="{Binding PackageName}"
                                                               Foreground="{DynamicResource Foreground4Brush}"
                                                               FontSize="13"
                                                               VerticalAlignment="Center"
                                                               TextTrimming="CharacterEllipsis"/>
                                                    <Border Grid.Column="2"
                                                            Background="{Binding StatusColor}"
                                                            CornerRadius="4"
                                                            Padding="8,3"
                                                            HorizontalAlignment="Left"
                                                            VerticalAlignment="Center">
                                                        <TextBlock Text="{Binding StatusText}"
                                                                   Foreground="White"
                                                                   FontSize="11"
                                                                   FontWeight="Medium"/>
                                                    </Border>
                                                    <TextBlock Grid.Column="3"
                                                               Text="{Binding MemoryUsage}"
                                                               Foreground="{DynamicResource Foreground4Brush}"
                                                               FontSize="13"
                                                               VerticalAlignment="Center"/>
                                                </Grid>
                                            </Border>
                                            <DataTemplate.Triggers>
                                                <DataTrigger Binding="{Binding IsSelected}" Value="True">
                                                    <Setter TargetName="ItemBorder" Property="Background" Value="{DynamicResource Background4Brush}"/>
                                                </DataTrigger>
                                            </DataTemplate.Triggers>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </ScrollViewer>

                            <!-- Empty State -->
                            <StackPanel x:Name="EmptyRunningState"
                                        Grid.Row="1"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Visibility="Collapsed">
                                <TextBlock Text="&#xE7EE;"
                                           FontFamily="Segoe MDL2 Assets"
                                           FontSize="48"
                                           Foreground="{DynamicResource Foreground4Brush}"
                                           HorizontalAlignment="Center"/>
                                <TextBlock x:Name="EmptyRunningText"
                                           Text="No running plugins"
                                           Foreground="{DynamicResource Foreground3Brush}"
                                           FontSize="14"
                                           Margin="0,12,0,0"
                                           HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </Border>
            </Grid>

            <!-- Startup Items Page -->
            <Grid x:Name="PageStartup" Visibility="Collapsed">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <Grid Grid.Row="0" Margin="24,20,24,16">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Title Row -->
                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel>
                            <TextBlock x:Name="TitleStartupItems"
                                       Text="Startup Items"
                                       FontSize="22"
                                       FontWeight="Bold"
                                       Foreground="{DynamicResource Foreground1Brush}"/>
                            <TextBlock x:Name="StartupSubtitle"
                                       Text="Manage plugins that run on Phobos startup"
                                       FontSize="13"
                                       Margin="0,4,0,0"
                                       Foreground="{DynamicResource Foreground4Brush}"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1"
                                    Orientation="Horizontal"
                                    VerticalAlignment="Center">
                            <Button x:Name="BtnRefreshStartup"
                                    Style="{DynamicResource PhobosButtonSecondary}"
                                    Click="BtnRefreshStartup_Click">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="&#xE72C;"
                                               FontFamily="Segoe MDL2 Assets"
                                               FontSize="12"
                                               VerticalAlignment="Center"/>
                                    <TextBlock x:Name="BtnRefreshStartupText"
                                               Text="Refresh"
                                               Margin="6,0,0,0"/>
                                </StackPanel>
                            </Button>
                            <Button x:Name="BtnAddStartup"
                                    Style="{DynamicResource PhobosButton}"
                                    Margin="8,0,0,0"
                                    Click="BtnAddStartup_Click">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="&#xE710;"
                                               FontFamily="Segoe MDL2 Assets"
                                               FontSize="12"
                                               VerticalAlignment="Center"/>
                                    <TextBlock x:Name="BtnAddStartupText"
                                               Text="Add"
                                               Margin="6,0,0,0"/>
                                </StackPanel>
                            </Button>
                            <Button x:Name="BtnEditStartup"
                                    Style="{DynamicResource PhobosButtonSecondary}"
                                    Margin="8,0,0,0"
                                    IsEnabled="False"
                                    Click="BtnEditStartup_Click">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="&#xE70F;"
                                               FontFamily="Segoe MDL2 Assets"
                                               FontSize="12"
                                               VerticalAlignment="Center"/>
                                    <TextBlock x:Name="BtnEditStartupText"
                                               Text="Edit"
                                               Margin="6,0,0,0"/>
                                </StackPanel>
                            </Button>
                            <Button x:Name="BtnDeleteStartup"
                                    Style="{DynamicResource PhobosButtonDanger}"
                                    Margin="8,0,0,0"
                                    IsEnabled="False"
                                    Click="BtnDeleteStartup_Click">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="&#xE74D;"
                                               FontFamily="Segoe MDL2 Assets"
                                               FontSize="12"
                                               VerticalAlignment="Center"/>
                                    <TextBlock x:Name="BtnDeleteStartupText"
                                               Text="Delete"
                                               Margin="6,0,0,0"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </Grid>
                </Grid>

                <!-- Startup Items List -->
                <Border Grid.Row="1" Margin="24,0,24,24">
                    <Border Background="{DynamicResource Background2Brush}"
                            BorderBrush="{DynamicResource BorderBrush}"
                            BorderThickness="1"
                            CornerRadius="8">
                        <Grid>
                            <Grid.RowDefinitions>
                                <!-- Table Header -->
                                <RowDefinition Height="44"/>
                                <!-- Data -->
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <!-- Table Header -->
                            <Border Grid.Row="0"
                                    BorderBrush="{DynamicResource BorderBrush}"
                                    BorderThickness="0,0,0,1"
                                    Padding="16,0">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="60"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="180"/>
                                        <ColumnDefinition Width="80"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock x:Name="HeaderEnabled"
                                               Grid.Column="0"
                                               Text="Enable"
                                               Foreground="{DynamicResource Foreground3Brush}"
                                               FontSize="12"
                                               FontWeight="Medium"
                                               VerticalAlignment="Center"/>
                                    <TextBlock x:Name="HeaderStartupPackage"
                                               Grid.Column="1"
                                               Text="Package Name"
                                               Foreground="{DynamicResource Foreground3Brush}"
                                               FontSize="12"
                                               FontWeight="Medium"
                                               VerticalAlignment="Center"/>
                                    <TextBlock x:Name="HeaderCommand"
                                               Grid.Column="2"
                                               Text="Command"
                                               Foreground="{DynamicResource Foreground3Brush}"
                                               FontSize="12"
                                               FontWeight="Medium"
                                               VerticalAlignment="Center"/>
                                    <TextBlock x:Name="HeaderPriority"
                                               Grid.Column="3"
                                               Text="Priority"
                                               Foreground="{DynamicResource Foreground3Brush}"
                                               FontSize="12"
                                               FontWeight="Medium"
                                               VerticalAlignment="Center"/>
                                </Grid>
                            </Border>

                            <!-- Data List -->
                            <ScrollViewer Grid.Row="1"
                                          VerticalScrollBarVisibility="Auto"
                                          HorizontalScrollBarVisibility="Disabled">
                                <ItemsControl x:Name="StartupItemsList">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border x:Name="ItemBorder"
                                                    Style="{StaticResource ListItemCardStyle}"
                                                    MouseLeftButtonDown="StartupItem_Click">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="60"/>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="180"/>
                                                        <ColumnDefinition Width="80"/>
                                                    </Grid.ColumnDefinitions>
                                                    <CheckBox Grid.Column="0"
                                                              IsChecked="{Binding IsEnabled, Mode=TwoWay}"
                                                              Checked="StartupItem_EnabledChanged"
                                                              Unchecked="StartupItem_EnabledChanged"
                                                              VerticalAlignment="Center"/>
                                                    <TextBlock Grid.Column="1"
                                                               Text="{Binding PackageName}"
                                                               Foreground="{DynamicResource Foreground1Brush}"
                                                               FontSize="14"
                                                               VerticalAlignment="Center"
                                                               TextTrimming="CharacterEllipsis"/>
                                                    <TextBlock Grid.Column="2"
                                                               Text="{Binding Command}"
                                                               Foreground="{DynamicResource Foreground4Brush}"
                                                               FontSize="13"
                                                               VerticalAlignment="Center"
                                                               TextTrimming="CharacterEllipsis"/>
                                                    <TextBlock Grid.Column="3"
                                                               Text="{Binding Priority}"
                                                               Foreground="{DynamicResource Foreground4Brush}"
                                                               FontSize="13"
                                                               VerticalAlignment="Center"/>
                                                </Grid>
                                            </Border>
                                            <DataTemplate.Triggers>
                                                <DataTrigger Binding="{Binding IsSelected}" Value="True">
                                                    <Setter TargetName="ItemBorder" Property="Background" Value="{DynamicResource Background4Brush}"/>
                                                </DataTrigger>
                                            </DataTemplate.Triggers>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </ScrollViewer>

                            <!-- Empty State -->
                            <StackPanel x:Name="EmptyStartupState"
                                        Grid.Row="1"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Visibility="Collapsed">
                                <TextBlock Text="&#xE7E8;"
                                           FontFamily="Segoe MDL2 Assets"
                                           FontSize="48"
                                           Foreground="{DynamicResource Foreground4Brush}"
                                           HorizontalAlignment="Center"/>
                                <TextBlock x:Name="EmptyStartupText"
                                           Text="No startup items"
                                           Foreground="{DynamicResource Foreground3Brush}"
                                           FontSize="14"
                                           Margin="0,12,0,0"
                                           HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </Border>
            </Grid>
        </Grid>

        <!-- Startup Edit Dialog Overlay -->
        <Border x:Name="StartupEditDialog"
                Grid.ColumnSpan="2"
                Background="#80000000"
                Visibility="Collapsed">
            <Border Background="{DynamicResource Background2Brush}"
                    BorderBrush="{DynamicResource BorderBrush}"
                    BorderThickness="1"
                    CornerRadius="12"
                    Width="450"
                    Padding="24"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Dialog Title -->
                    <TextBlock x:Name="DialogTitle"
                               Grid.Row="0"
                               Text="Add Startup Item"
                               FontSize="18"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource Foreground1Brush}"
                               Margin="0,0,0,20"/>

                    <!-- Package Name -->
                    <StackPanel Grid.Row="1" Margin="0,0,0,16">
                        <TextBlock x:Name="LabelPackageName"
                                   Text="Package Name"
                                   Foreground="{DynamicResource Foreground2Brush}"
                                   FontSize="13"
                                   Margin="0,0,0,8"/>
                        <TextBox x:Name="TxtPackageName"
                                 Style="{DynamicResource PhobosTextBox}"
                                 Padding="12,10"/>
                    </StackPanel>

                    <!-- Command -->
                    <StackPanel Grid.Row="2" Margin="0,0,0,16">
                        <TextBlock x:Name="LabelCommand"
                                   Text="Command"
                                   Foreground="{DynamicResource Foreground2Brush}"
                                   FontSize="13"
                                   Margin="0,0,0,8"/>
                        <TextBox x:Name="TxtCommand"
                                 Style="{DynamicResource PhobosTextBox}"
                                 Padding="12,10"/>
                    </StackPanel>

                    <!-- Priority -->
                    <StackPanel Grid.Row="3" Margin="0,0,0,24">
                        <TextBlock x:Name="LabelPriority"
                                   Text="Priority (lower = earlier)"
                                   Foreground="{DynamicResource Foreground2Brush}"
                                   FontSize="13"
                                   Margin="0,0,0,8"/>
                        <TextBox x:Name="TxtPriority"
                                 Style="{DynamicResource PhobosTextBox}"
                                 Padding="12,10"
                                 Text="100"
                                 Width="120"
                                 HorizontalAlignment="Left"/>
                    </StackPanel>

                    <!-- Buttons -->
                    <StackPanel Grid.Row="4"
                                Orientation="Horizontal"
                                HorizontalAlignment="Right">
                        <Button x:Name="BtnDialogCancel"
                                Style="{DynamicResource PhobosButtonSecondary}"
                                Padding="20,10"
                                Click="BtnDialogCancel_Click">
                            <TextBlock x:Name="BtnCancelText" Text="Cancel"/>
                        </Button>
                        <Button x:Name="BtnDialogSave"
                                Style="{DynamicResource PhobosButton}"
                                Padding="20,10"
                                Margin="12,0,0,0"
                                Click="BtnDialogSave_Click">
                            <TextBlock x:Name="BtnSaveText" Text="Save"/>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>
        </Border>
    </Grid>
</UserControl>
