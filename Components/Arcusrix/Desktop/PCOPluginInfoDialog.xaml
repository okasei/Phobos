<Window x:Class="Phobos.Components.Arcusrix.Desktop.PCOPluginInfoDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Plugin Info"
        Width="500"
        Height="600"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner"
        ShowInTaskbar="False"
        Loaded="Window_Loaded">

    <Border x:Name="MainBorder"
            Background="{DynamicResource Background2Brush}"
            BorderBrush="{DynamicResource BorderBrush}"
            BorderThickness="1"
            CornerRadius="8"
            Padding="24"
            RenderTransformOrigin="0.5,0.5">

        <Border.RenderTransform>
            <TransformGroup>
                <ScaleTransform x:Name="DialogScale" ScaleX="1" ScaleY="1"/>
                <TranslateTransform x:Name="DialogTranslate" Y="0"/>
            </TransformGroup>
        </Border.RenderTransform>

        <Border.Effect>
            <DropShadowEffect Color="Black"
                              BlurRadius="20"
                              ShadowDepth="0"
                              Opacity="0.3"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- 标题 -->
            <TextBlock x:Name="DialogTitleText"
                       Grid.Row="0"
                       Text="Plugin Information"
                       FontSize="{DynamicResource FontSizeLg}"
                       FontWeight="{DynamicResource FontWeightSemibold}"
                       Foreground="{DynamicResource Foreground1Brush}"
                       Margin="0,0,0,20"/>

            <!-- 内容区域 -->
            <ScrollViewer Grid.Row="1"
                          VerticalScrollBarVisibility="Auto"
                          Margin="0,0,0,20">
                <StackPanel>
                    <!-- 插件图标 -->
                    <Border Width="96"
                            Height="96"
                            Background="{DynamicResource Background3Brush}"
                            CornerRadius="16"
                            HorizontalAlignment="Center"
                            Margin="0,0,0,20">
                        <Image x:Name="PluginIcon"
                               Width="72"
                               Height="72"
                               Stretch="Uniform"/>
                    </Border>

                    <!-- 插件名称 -->
                    <TextBlock x:Name="PluginName"
                               FontSize="{DynamicResource FontSize2xl}"
                               FontWeight="{DynamicResource FontWeightSemibold}"
                               Foreground="{DynamicResource Foreground1Brush}"
                               TextAlignment="Center"
                               Margin="0,0,0,8"/>

                    <!-- 版本号 -->
                    <TextBlock x:Name="PluginVersion"
                               FontSize="{DynamicResource FontSizeMd}"
                               Foreground="{DynamicResource Foreground3Brush}"
                               TextAlignment="Center"
                               Margin="0,0,0,20"/>

                    <!-- 详细信息 -->
                    <Border Background="{DynamicResource Background3Brush}"
                            BorderBrush="{DynamicResource BorderBrush}"
                            BorderThickness="1"
                            CornerRadius="8"
                            Padding="16">
                        <StackPanel>
                            <!-- 包名 -->
                            <StackPanel Margin="0,0,0,12">
                                <TextBlock x:Name="PackageNameLabel"
                                           Text="Package Name"
                                           FontSize="{DynamicResource FontSizeXs}"
                                           Foreground="{DynamicResource Foreground3Brush}"
                                           Margin="0,0,0,4"/>
                                <TextBlock x:Name="PackageNameText"
                                           FontSize="{DynamicResource FontSizeMd}"
                                           Foreground="{DynamicResource Foreground1Brush}"
                                           TextWrapping="Wrap"/>
                            </StackPanel>

                            <!-- 制造商 -->
                            <StackPanel Margin="0,0,0,12">
                                <TextBlock x:Name="ManufacturerLabel"
                                           Text="Manufacturer"
                                           FontSize="{DynamicResource FontSizeXs}"
                                           Foreground="{DynamicResource Foreground3Brush}"
                                           Margin="0,0,0,4"/>
                                <TextBlock x:Name="ManufacturerText"
                                           FontSize="{DynamicResource FontSizeMd}"
                                           Foreground="{DynamicResource Foreground1Brush}"
                                           TextWrapping="Wrap"/>
                            </StackPanel>

                            <!-- 描述 -->
                            <StackPanel Margin="0,0,0,12">
                                <TextBlock x:Name="DescriptionLabel"
                                           Text="Description"
                                           FontSize="{DynamicResource FontSizeXs}"
                                           Foreground="{DynamicResource Foreground3Brush}"
                                           Margin="0,0,0,4"/>
                                <TextBlock x:Name="DescriptionText"
                                           FontSize="{DynamicResource FontSizeMd}"
                                           Foreground="{DynamicResource Foreground1Brush}"
                                           TextWrapping="Wrap"/>
                            </StackPanel>

                            <!-- 安装目录 -->
                            <StackPanel Margin="0,0,0,12">
                                <TextBlock x:Name="DirectoryLabel"
                                           Text="Install Directory"
                                           FontSize="{DynamicResource FontSizeXs}"
                                           Foreground="{DynamicResource Foreground3Brush}"
                                           Margin="0,0,0,4"/>
                                <TextBlock x:Name="DirectoryText"
                                           FontSize="{DynamicResource FontSizeSm}"
                                           Foreground="{DynamicResource Foreground2Brush}"
                                           TextWrapping="Wrap"/>
                            </StackPanel>

                            <!-- 安装时间 -->
                            <StackPanel Margin="0,0,0,12">
                                <TextBlock x:Name="InstallTimeLabel"
                                           Text="Install Time"
                                           FontSize="{DynamicResource FontSizeXs}"
                                           Foreground="{DynamicResource Foreground3Brush}"
                                           Margin="0,0,0,4"/>
                                <TextBlock x:Name="InstallTimeText"
                                           FontSize="{DynamicResource FontSizeMd}"
                                           Foreground="{DynamicResource Foreground1Brush}"/>
                            </StackPanel>

                            <!-- 是否启用 -->
                            <StackPanel Margin="0,0,0,0">
                                <TextBlock x:Name="StatusLabel"
                                           Text="Status"
                                           FontSize="{DynamicResource FontSizeXs}"
                                           Foreground="{DynamicResource Foreground3Brush}"
                                           Margin="0,0,0,4"/>
                                <TextBlock x:Name="StatusText"
                                           FontSize="{DynamicResource FontSizeMd}"
                                           Foreground="{DynamicResource SuccessBrush}"/>
                            </StackPanel>

                            <!-- 系统插件标记 -->
                            <Border x:Name="SystemPluginBadge"
                                    Background="{DynamicResource Accent1Brush}"
                                    CornerRadius="6"
                                    Padding="12,6"
                                    HorizontalAlignment="Left"
                                    Margin="0,12,0,0"
                                    Visibility="Collapsed">
                                <TextBlock x:Name="SystemPluginBadgeText"
                                           Text="System Plugin"
                                           FontSize="{DynamicResource FontSizeSm}"
                                           FontWeight="{DynamicResource FontWeightMedium}"
                                           Foreground="{DynamicResource Foreground1Brush}"/>
                            </Border>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>

            <!-- 关闭按钮 -->
            <Button Grid.Row="2"
                    x:Name="CloseButton"
                    Content="Close"
                    Width="100"
                    Height="36"
                    Background="{DynamicResource PrimaryBrush}"
                    Foreground="{DynamicResource Foreground1Brush}"
                    BorderThickness="0"
                    FontSize="{DynamicResource FontSizeMd}"
                    Cursor="Hand"
                    HorizontalAlignment="Center"
                    Click="CloseButton_Click">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="6"/>
                    </Style>
                </Button.Resources>
            </Button>
        </Grid>
    </Border>
</Window>