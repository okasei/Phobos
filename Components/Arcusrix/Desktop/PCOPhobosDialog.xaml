<Window x:Class="Phobos.Components.Arcusrix.Desktop.PCOPhobosDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Phobos.Components.Arcusrix"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        Title="Dialog"
        Width="420"
        MinHeight="200"
        MaxHeight="600"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ShowInTaskbar="False"
        ResizeMode="NoResize"
        WindowStartupLocation="Manual"
        KeyDown="Window_KeyDown">

    <Window.Resources>
        <ResourceDictionary>
            <!-- 按钮基础样式 -->
            <Style x:Key="DialogButtonStyle" TargetType="Button">
                <Setter Property="MinWidth" Value="80"/>
                <Setter Property="Height" Value="32"/>
                <Setter Property="Padding" Value="16,6"/>
                <Setter Property="Margin" Value="8,0,0,0"/>
                <Setter Property="FontSize" Value="13"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6"
                                SnapsToDevicePixels="True">
                                <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              Margin="{TemplateBinding Padding}"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Opacity" Value="0.9"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter TargetName="border" Property="Opacity" Value="0.8"/>
                                </Trigger>
                                <Trigger Property="IsEnabled" Value="False">
                                    <Setter TargetName="border" Property="Opacity" Value="0.5"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <!-- Primary 按钮样式 -->
            <Style x:Key="PrimaryButtonStyle" TargetType="Button" BasedOn="{StaticResource DialogButtonStyle}">
                <Setter Property="Background" Value="{DynamicResource PrimaryBrush}"/>
                <Setter Property="Foreground" Value="{DynamicResource Foreground1Brush}"/>
                <Setter Property="BorderBrush" Value="{DynamicResource PrimaryBrush}"/>
            </Style>

            <!-- Secondary 按钮样式 -->
            <Style x:Key="SecondaryButtonStyle" TargetType="Button" BasedOn="{StaticResource DialogButtonStyle}">
                <Setter Property="Background" Value="{DynamicResource Background3Brush}"/>
                <Setter Property="Foreground" Value="{DynamicResource Foreground2Brush}"/>
                <Setter Property="BorderBrush" Value="{DynamicResource Background4Brush}"/>
            </Style>

            <!-- Cancel 按钮样式 -->
            <Style x:Key="CancelButtonStyle" TargetType="Button" BasedOn="{StaticResource DialogButtonStyle}">
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="Foreground" Value="{DynamicResource Foreground3Brush}"/>
                <Setter Property="BorderBrush" Value="{DynamicResource Background4Brush}"/>
            </Style>
        </ResourceDictionary>
    </Window.Resources>

    <!-- 主容器 -->
    <Border x:Name="MainBorder"
            Background="{DynamicResource Background2Brush}"
            BorderBrush="{DynamicResource Background4Brush}"
            BorderThickness="1"
            CornerRadius="12"
            Margin="10"
            MouseLeftButtonDown="Border_MouseLeftButtonDown">

        <Border.Effect>
            <DropShadowEffect Color="Black" 
                              BlurRadius="20" 
                              ShadowDepth="4" 
                              Opacity="0.4"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <!-- 标题栏 -->
                <RowDefinition Height="Auto"/>
                <!-- 内容区域 -->
                <RowDefinition Height="*"/>
                <!-- 按钮区域 -->
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- 标题栏 -->
            <Grid x:Name="TitleBar" 
                  Grid.Row="0" 
                  Height="48"
                  Margin="16,8,16,0"
                  Visibility="{Binding TitleBarVisibility}">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- 调用者图标 -->
                <Image x:Name="CallerIconImage"
                       Grid.Column="0"
                       Width="24"
                       Height="24"
                       Margin="0,0,10,0"
                       VerticalAlignment="Center"
                       Visibility="Collapsed"/>

                <!-- 标题文本 -->
                <TextBlock x:Name="TitleText"
                           Grid.Column="1"
                           Text="{Binding Title}"
                           FontSize="15"
                           FontWeight="SemiBold"
                           Foreground="{DynamicResource Foreground1Brush}"
                           VerticalAlignment="Center"
                           TextTrimming="CharacterEllipsis"/>

                <!-- 关闭按钮 -->
                <Button x:Name="CloseButton"
                        Grid.Column="2"
                        Width="28"
                        Height="28"
                        Background="Transparent"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="CloseButton_Click"
                        Visibility="Collapsed">
                    <Path Data="M0,0 L10,10 M10,0 L0,10"
                          Stroke="{DynamicResource Foreground3Brush}"
                          StrokeThickness="1.5"
                          Width="10"
                          Height="10"/>
                </Button>
            </Grid>

            <!-- 内容区域 -->
            <Grid x:Name="ContentArea" 
                  Grid.Row="1" 
                  Margin="24,16,24,16"
                  MinHeight="80">

                <!-- 模式1: 图片+文字 -->
                <StackPanel x:Name="ImageTextContent" 
                            Visibility="Collapsed"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center">
                    <Image x:Name="ContentImage"
                           MaxWidth="200"
                           MaxHeight="150"
                           Margin="0,0,0,16"
                           HorizontalAlignment="Center"/>
                    <TextBlock x:Name="ImageTextBlock"
                               TextAlignment="Center"
                               TextWrapping="Wrap"
                               FontSize="14"
                               Foreground="{DynamicResource Foreground2Brush}"
                               MaxWidth="350"/>
                </StackPanel>

                <!-- 模式2: 居中文字 -->
                <TextBlock x:Name="CenteredTextContent"
                           Visibility="Collapsed"
                           TextAlignment="Center"
                           TextWrapping="Wrap"
                           FontSize="14"
                           Foreground="{DynamicResource Foreground2Brush}"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           MaxWidth="350"/>

                <!-- 模式3: 左对齐文字 -->
                <TextBlock x:Name="LeftAlignedTextContent"
                           Visibility="Collapsed"
                           TextAlignment="Left"
                           TextWrapping="Wrap"
                           FontSize="14"
                           Foreground="{DynamicResource Foreground2Brush}"
                           VerticalAlignment="Center"/>

                <!-- 自定义内容容器 -->
                <ContentPresenter x:Name="CustomContentPresenter"
                                  Visibility="Collapsed"/>
            </Grid>

            <!-- 按钮区域 -->
            <Grid x:Name="ButtonArea" 
                  Grid.Row="2" 
                  Margin="16,8,16,16"
                  Height="48">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- 取消按钮（左侧） -->
                <Button x:Name="CancelButton"
                        Grid.Column="0"
                        Content="Cancel"
                        Style="{StaticResource CancelButtonStyle}"
                        Margin="0"
                        Click="CancelButton_Click"
                        Visibility="Collapsed"/>

                <!-- 自定义按钮区域 -->
                <ContentPresenter x:Name="CustomButtonPresenter"
                                  Grid.Column="1"
                                  Grid.ColumnSpan="2"
                                  Visibility="Collapsed"/>

                <!-- 右侧按钮组 -->
                <StackPanel x:Name="RightButtonPanel"
                            Grid.Column="2"
                            Orientation="Horizontal"
                            HorizontalAlignment="Right"/>
            </Grid>
        </Grid>
    </Border>
</Window>
