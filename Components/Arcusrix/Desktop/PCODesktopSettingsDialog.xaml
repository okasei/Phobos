<Window x:Class="Phobos.Components.Arcusrix.Desktop.PCODesktopSettingsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Desktop Settings"
        Width="500"
        Height="400"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner"
        ShowInTaskbar="False">

    <Border Background="{DynamicResource Background2Brush}"
            BorderBrush="{DynamicResource BorderBrush}"
            BorderThickness="1"
            CornerRadius="8"
            Padding="24">

        <Border.Effect>
            <DropShadowEffect Color="Black"
                              BlurRadius="20"
                              ShadowDepth="0"
                              Opacity="0.3"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- 标题 -->
            <TextBlock Grid.Row="0"
                       Text="Desktop Settings"
                       FontSize="{DynamicResource FontSizeLg}"
                       FontWeight="{DynamicResource FontWeightSemibold}"
                       Foreground="{DynamicResource Foreground1Brush}"
                       Margin="0,0,0,20"/>

            <!-- 设置选项 -->
            <ScrollViewer Grid.Row="1"
                          VerticalScrollBarVisibility="Auto"
                          Margin="0,0,0,20">
                <StackPanel>
                    <!-- 网格设置 -->
                    <Border Background="{DynamicResource Background3Brush}"
                            BorderBrush="{DynamicResource BorderBrush}"
                            BorderThickness="1"
                            CornerRadius="8"
                            Padding="16"
                            Margin="0,0,0,16">
                        <StackPanel>
                            <TextBlock Text="Grid Layout"
                                       FontSize="{DynamicResource FontSizeMd}"
                                       FontWeight="{DynamicResource FontWeightSemibold}"
                                       Foreground="{DynamicResource Foreground1Brush}"
                                       Margin="0,0,0,12"/>

                            <!-- 列数 -->
                            <Grid Margin="0,0,0,12">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0"
                                           Text="Columns:"
                                           FontSize="{DynamicResource FontSizeSm}"
                                           Foreground="{DynamicResource Foreground2Brush}"
                                           VerticalAlignment="Center"/>

                                <StackPanel Grid.Column="1"
                                            Orientation="Horizontal">
                                    <Button Content="-"
                                            Width="32"
                                            Height="32"
                                            Margin="0,0,8,0"
                                            Click="DecreaseColumns_Click"/>
                                    <TextBlock x:Name="ColumnsText"
                                               Text="6"
                                               FontSize="{DynamicResource FontSizeMd}"
                                               Foreground="{DynamicResource Foreground1Brush}"
                                               VerticalAlignment="Center"
                                               MinWidth="30"
                                               TextAlignment="Center"/>
                                    <Button Content="+"
                                            Width="32"
                                            Height="32"
                                            Margin="8,0,0,0"
                                            Click="IncreaseColumns_Click"/>
                                </StackPanel>
                            </Grid>

                            <!-- 行数 -->
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0"
                                           Text="Rows:"
                                           FontSize="{DynamicResource FontSizeSm}"
                                           Foreground="{DynamicResource Foreground2Brush}"
                                           VerticalAlignment="Center"/>

                                <StackPanel Grid.Column="1"
                                            Orientation="Horizontal">
                                    <Button Content="-"
                                            Width="32"
                                            Height="32"
                                            Margin="0,0,8,0"
                                            Click="DecreaseRows_Click"/>
                                    <TextBlock x:Name="RowsText"
                                               Text="4"
                                               FontSize="{DynamicResource FontSizeMd}"
                                               Foreground="{DynamicResource Foreground1Brush}"
                                               VerticalAlignment="Center"
                                               MinWidth="30"
                                               TextAlignment="Center"/>
                                    <Button Content="+"
                                            Width="32"
                                            Height="32"
                                            Margin="8,0,0,0"
                                            Click="IncreaseRows_Click"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- 布局管理 -->
                    <Border Background="{DynamicResource Background3Brush}"
                            BorderBrush="{DynamicResource BorderBrush}"
                            BorderThickness="1"
                            CornerRadius="8"
                            Padding="16">
                        <StackPanel>
                            <TextBlock Text="Layout Management"
                                       FontSize="{DynamicResource FontSizeMd}"
                                       FontWeight="{DynamicResource FontWeightSemibold}"
                                       Foreground="{DynamicResource Foreground1Brush}"
                                       Margin="0,0,0,12"/>

                            <Button x:Name="ResetLayoutButton"
                                    Content="Reset to Default Layout"
                                    Height="36"
                                    Background="{DynamicResource DangerBrush}"
                                    Foreground="{DynamicResource Foreground1Brush}"
                                    BorderThickness="0"
                                    Click="ResetLayout_Click">
                                <Button.Resources>
                                    <Style TargetType="Border">
                                        <Setter Property="CornerRadius" Value="6"/>
                                    </Style>
                                </Button.Resources>
                            </Button>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>

            <!-- 按钮 -->
            <StackPanel Grid.Row="2"
                        Orientation="Horizontal"
                        HorizontalAlignment="Right">

                <Button x:Name="CancelButton"
                        Content="Cancel"
                        Width="80"
                        Height="32"
                        Background="{DynamicResource Background3Brush}"
                        Foreground="{DynamicResource Foreground1Brush}"
                        BorderBrush="{DynamicResource BorderBrush}"
                        BorderThickness="1"
                        FontSize="{DynamicResource FontSizeSm}"
                        Cursor="Hand"
                        Margin="0,0,12,0"
                        Click="CancelButton_Click">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="6"/>
                        </Style>
                    </Button.Resources>
                </Button>

                <Button x:Name="SaveButton"
                        Content="Save"
                        Width="80"
                        Height="32"
                        Background="{DynamicResource PrimaryBrush}"
                        Foreground="{DynamicResource Foreground1Brush}"
                        BorderThickness="0"
                        FontSize="{DynamicResource FontSizeSm}"
                        Cursor="Hand"
                        Click="SaveButton_Click">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="6"/>
                        </Style>
                    </Button.Resources>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</Window>
