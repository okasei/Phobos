<Window x:Class="Phobos.Components.Arcusrix.Desktop.PCOPhobosDesktop"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Phobos.Components.Arcusrix.Desktop"
        xmlns:localc="clr-namespace:Phobos.Components.Arcusrix.Desktop.Components"
        xmlns:PhobosClipBorder="clr-namespace:Phobos.UI.PIBorder"
        mc:Ignorable="d"
        Title="Phobos Desktop"
        Width="1200"
        Height="800"
        MinWidth="800"
        MinHeight="600"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        Topmost="False"
        WindowStartupLocation="Manual">

    <Window.Resources>
        <ResourceDictionary>
            <!-- 窗口控制按钮样式 -->
            <Style x:Key="WindowControlButtonStyle" TargetType="Button">
                <Setter Property="Width" Value="46"/>
                <Setter Property="Height" Value="32"/>
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="Foreground" Value="{DynamicResource Foreground2Brush}"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderThickness="0">
                                <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="{DynamicResource Background3Brush}"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="{DynamicResource Background4Brush}"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <!-- 关闭按钮样式 -->
            <Style x:Key="CloseButtonStyle" TargetType="Button" BasedOn="{StaticResource PhobosButton}">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderThickness="0">
                                <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="{DynamicResource DangerBrush}"/>
                                    <Setter Property="Foreground" Value="{DynamicResource Foreground1Brush}"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="{DynamicResource DangerBrush}"/>
                                    <Setter TargetName="border" Property="Opacity" Value="0.8"/>
                                    <Setter Property="Foreground" Value="{DynamicResource Foreground1Brush}"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <!-- 桌面图标样式 -->
            <Style x:Key="DesktopIconStyle" TargetType="Border">
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="Margin" Value="4"/>
            </Style>

            <!-- 文件夹图标样式 -->
            <Style x:Key="FolderIconStyle" TargetType="Border">
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="Margin" Value="4"/>
            </Style>

            <!-- 上下文菜单样式 -->
            <Style x:Key="ContextMenuStyle" TargetType="ContextMenu">
                <Setter Property="Background" Value="{DynamicResource Background2Brush}"/>
                <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="Padding" Value="4"/>
                <Setter Property="HasDropShadow" Value="True"/>
            </Style>

            <Style x:Key="ContextMenuItemStyle" TargetType="MenuItem">
                <Setter Property="Foreground" Value="{DynamicResource Foreground1Brush}"/>
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="Padding" Value="12,8"/>
                <Setter Property="FontSize" Value="{DynamicResource FontSizeSm}"/>
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="Background" Value="{DynamicResource Background3Brush}"/>
                    </Trigger>
                </Style.Triggers>
            </Style>
        </ResourceDictionary>
    </Window.Resources>

    <!-- 主容器 -->
    <Border x:Name="MainBorder"
            Background="{DynamicResource Background1Brush}"
            BorderBrush="{DynamicResource Background4Brush}"
            BorderThickness="1"
            CornerRadius="16"
            Margin="10">

        <Border.Effect>
            <DropShadowEffect Color="Black"
                              BlurRadius="16"
                              ShadowDepth="0"
                              Opacity="0.3"/>
        </Border.Effect>

        <!-- 内容裁剪容器（确保背景图片不超出圆角边界） -->
        <PhobosClipBorder:ClippingBorder  CornerRadius="16" ClipToBounds="True">
            <Grid>
            <Grid.RowDefinitions>
                <!-- 搜索栏区域 -->
                <RowDefinition Height="Auto"/>
                <!-- 内容区域 -->
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- 背景图片层 -->
            <Image x:Name="BackgroundImage"
                   Grid.RowSpan="2"
                   Stretch="UniformToFill"
                   Visibility="Collapsed"
                   ClipToBounds="True"/>

            <!-- 隐藏的图标和标题（保持代码兼容性） -->
            <Image x:Name="WindowIcon" Visibility="Collapsed"/>
            <TextBlock x:Name="TitleText" Visibility="Collapsed"/>

            <!-- 顶部：搜索栏 -->
            <Border x:Name="SearchBorder"
                    Grid.Row="0"
                    Background="{DynamicResource Background3Brush}"
                    CornerRadius="6"
                    Margin="20,16,20,8"
                    MinWidth="300"
                    Width="400"
                    HorizontalAlignment="Center">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- 搜索图标 -->
                    <TextBlock Grid.Column="0"
                               Text="&#128269;"
                               FontSize="12"
                               Margin="10,0,6,0"
                               VerticalAlignment="Center"
                               Opacity="0.6"/>

                    <!-- 搜索输入框 -->
                    <TextBox x:Name="SearchBox"
                             Grid.Column="1"
                             Background="Transparent"
                             BorderThickness="0"
                             Foreground="{DynamicResource Foreground1Brush}"
                             FontSize="13"
                             VerticalAlignment="Center"
                             Padding="0,12"
                             MinWidth="200"
                             TextChanged="SearchBox_TextChanged"/>

                    <!-- 占位符文本 -->
                    <TextBlock x:Name="SearchPlaceholder"
                               Grid.Column="1"
                               Text="Search plugins..."
                               FontSize="13"
                               Foreground="{DynamicResource Foreground3Brush}"
                               VerticalAlignment="Center"
                               Margin="0,6"
                               IsHitTestVisible="False"/>

                    <!-- 清除按钮 -->
                    <Button x:Name="SearchClearButton"
                            Grid.Column="2"
                            Content="&#10005;"
                            FontSize="10"
                            Width="24"
                            Height="24"
                            Background="Transparent"
                            BorderThickness="0"
                            Foreground="{DynamicResource Foreground3Brush}"
                            Cursor="Hand"
                            Visibility="Collapsed"
                            Click="SearchClearButton_Click"/>
                </Grid>
            </Border>

            <!-- 桌面图标滚动容器 -->
            <ScrollViewer x:Name="DesktopScrollViewer" Style="{StaticResource PhobosScrollViewer}"
                          Grid.Row="1"
                          VerticalScrollBarVisibility="Auto"
                          HorizontalScrollBarVisibility="Disabled"
                          Background="Transparent">
                <Grid x:Name="DesktopGrid"
                      Background="Transparent"
                      MouseRightButtonDown="DesktopGrid_MouseRightButtonDown"
                      Margin="20">
                    <!-- 动态生成的网格将在此处添加 -->
                </Grid>
            </ScrollViewer>

            <!-- 文件夹弹出窗口遮罩 -->
            <Grid x:Name="FolderOverlay"
                  Grid.Row="1"
                  Background="#80000000"
                  Visibility="Collapsed"
                  MouseLeftButtonDown="FolderOverlay_MouseLeftButtonDown">

                <!-- 文件夹内容面板 -->
                <Border x:Name="FolderPanel"
                        Background="{DynamicResource Background2Brush}"
                        BorderBrush="{DynamicResource BorderBrush}"
                        BorderThickness="1"
                        CornerRadius="12"
                        MaxWidth="600"
                        MaxHeight="500"
                        Padding="20"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center">

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- 文件夹标题 -->
                        <TextBlock x:Name="FolderTitle"
                                   Grid.Row="0"
                                   Text="Folder"
                                   FontSize="{DynamicResource FontSizeLg}"
                                   FontWeight="{DynamicResource FontWeightSemibold}"
                                   Foreground="{DynamicResource Foreground1Brush}"
                                   Margin="0,0,0,16"/>

                        <!-- 文件夹内的图标网格 -->
                        <ScrollViewer Grid.Row="1"
                                      VerticalScrollBarVisibility="Auto"
                                      HorizontalScrollBarVisibility="Disabled">
                            <ItemsControl x:Name="FolderItemsControl">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <WrapPanel Orientation="Horizontal"/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                            </ItemsControl>
                        </ScrollViewer>
                    </Grid>
                </Border>
            </Grid>

            <!-- 设置面板遮罩 -->
            <Grid x:Name="SettingsOverlay"
                  Grid.RowSpan="2"
                  Background="#80000000"
                  Visibility="Collapsed"
                  MouseLeftButtonDown="SettingsOverlay_MouseLeftButtonDown">

                <!-- 设置面板 -->
                <Border x:Name="SettingsPanel"
                        Background="{DynamicResource Background2Brush}"
                        BorderBrush="{DynamicResource BorderBrush}"
                        BorderThickness="1"
                        CornerRadius="12"
                        Width="600"
                        MaxHeight="600"
                        Padding="24"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        RenderTransformOrigin="0.5,0.5">

                    <Border.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform x:Name="SettingsScale" ScaleX="1" ScaleY="1"/>
                            <TranslateTransform x:Name="SettingsTranslate" Y="0"/>
                        </TransformGroup>
                    </Border.RenderTransform>

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- 标题栏 -->
                        <Grid Grid.Row="0" Margin="0,0,0,20">
                            <TextBlock x:Name="SettingsTitleText"
                                       Text="Desktop Settings"
                                       FontSize="{DynamicResource FontSizeLg}"
                                       FontWeight="{DynamicResource FontWeightSemibold}"
                                       Foreground="{DynamicResource Foreground1Brush}"
                                       VerticalAlignment="Center"/>

                            <Button x:Name="SettingsCloseButton" Style="{DynamicResource CloseButtonStyle}"
                                    Content="✕"
                                    Width="32"
                                    Height="32"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    Foreground="{DynamicResource Foreground3Brush}"
                                    FontSize="14"
                                    Cursor="Hand"
                                    HorizontalAlignment="Right"
                                    Click="SettingsCloseButton_Click"/>
                        </Grid>

                        <!-- 设置内容 -->
                        <ScrollViewer Grid.Row="1" Style="{StaticResource PhobosScrollViewer}"
                                      VerticalScrollBarVisibility="Auto"
                                      Margin="0,0,0,16">
                            <StackPanel>
                                <!-- 背景图片设置 -->
                                <TextBlock x:Name="BackgroundImageLabel"
                                           Text="Background Image"
                                           FontSize="{DynamicResource FontSizeMd}"
                                           FontWeight="{DynamicResource FontWeightMedium}"
                                           Foreground="{DynamicResource Foreground1Brush}"
                                           Margin="0,0,0,12"/>

                                <!-- 当前背景预览 -->
                                <Border x:Name="BackgroundPreviewBorder"
                                        Background="{DynamicResource Background3Brush}"
                                        BorderBrush="{DynamicResource BorderBrush}"
                                        BorderThickness="1"
                                        CornerRadius="8"
                                        Height="120"
                                        Margin="0,0,0,12"
                                        ClipToBounds="True">
                                    <Grid ClipToBounds="True">
                                        <Canvas ClipToBounds="True">
                                            <Image x:Name="BackgroundPreview"
                                                   Stretch="UniformToFill"
                                                   Width="{Binding ActualWidth, ElementName=BackgroundPreviewBorder}"
                                                   Height="{Binding ActualHeight, ElementName=BackgroundPreviewBorder}"/>
                                        </Canvas>
                                        <TextBlock x:Name="NoBackgroundText"
                                                   Text="No background image"
                                                   FontSize="{DynamicResource FontSizeSm}"
                                                   Foreground="{DynamicResource Foreground3Brush}"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"/>
                                    </Grid>
                                </Border>

                                <!-- 背景图片路径 -->
                                <Grid Margin="0,0,0,12">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBox x:Name="BackgroundPathTextBox"
                                             Grid.Column="0"
                                             Background="{DynamicResource Background3Brush}"
                                             BorderBrush="{DynamicResource BorderBrush}"
                                             BorderThickness="1"
                                             Foreground="{DynamicResource Foreground1Brush}"
                                             FontSize="{DynamicResource FontSizeSm}"
                                             Padding="12,8"
                                             IsReadOnly="True"/>

                                    <Button x:Name="BrowseBackgroundButton" Style="{StaticResource PhobosButton}"
                                            Grid.Column="1"
                                            Content="Browse"
                                            Width="75"
                                            Height="34"
                                            Background="{DynamicResource Background3Brush}"
                                            Foreground="{DynamicResource Foreground1Brush}"
                                            BorderThickness="0"
                                            FontSize="{DynamicResource FontSizeSm}"
                                            Cursor="Hand"
                                            Margin="5,0,0,0"
                                            Click="BrowseBackgroundButton_Click">
                                        <Button.Resources>
                                            <Style TargetType="Border">
                                                <Setter Property="CornerRadius" Value="6"/>
                                            </Style>
                                        </Button.Resources>
                                    </Button>

                                        <Button x:Name="ClearBackgroundButton"  Style="{StaticResource PhobosButtonDanger}"
                                            Grid.Column="2"
                                            Content="Clear"
                                            Width="60"
                                            Height="34"
                                            Background="{DynamicResource DangerBrush}"
                                            Foreground="{DynamicResource Foreground1Brush}"
                                            BorderThickness="0"
                                            FontSize="{DynamicResource FontSizeSm}"
                                            Cursor="Hand"
                                            Margin="8,0,0,0"
                                            Click="ClearBackgroundButton_Click">
                                        <Button.Resources>
                                            <Style TargetType="Border">
                                                <Setter Property="CornerRadius" Value="6"/>
                                            </Style>
                                        </Button.Resources>
                                    </Button>
                                </Grid>

                                <!-- 缩放模式 -->
                                <TextBlock x:Name="ScaleModeLabel"
                                           Text="Scaling Mode"
                                           FontSize="{DynamicResource FontSizeSm}"
                                           Foreground="{DynamicResource Foreground2Brush}"
                                           Margin="0,8,0,8"/>

                                    <ComboBox x:Name="ScaleModeComboBox"  Style="{StaticResource PhobosComboBox}" ItemContainerStyle="{StaticResource PhobosComboBoxItem}"
                                          Background="{DynamicResource Background3Brush}"
                                          Foreground="{DynamicResource Foreground1Brush}"
                                          BorderBrush="{DynamicResource BorderBrush}"
                                          BorderThickness="1"
                                          Padding="10,8"
                                          FontSize="{DynamicResource FontSizeSm}"
                                          SelectionChanged="ScaleModeComboBox_SelectionChanged">
                                    <ComboBoxItem x:Name="ScaleModeFill" Content="Fill (Crop to fit)" Tag="UniformToFill"/>
                                    <ComboBoxItem x:Name="ScaleModeFit" Content="Fit (Show entire image)" Tag="Uniform"/>
                                    <ComboBoxItem x:Name="ScaleModeStretch" Content="Stretch (Distort to fit)" Tag="Fill"/>
                                    <ComboBoxItem x:Name="ScaleModeTile" Content="Tile" Tag="None"/>
                                </ComboBox>

                                <!-- 背景透明度 -->
                                <TextBlock x:Name="BackgroundOpacityLabel"
                                           Text="Background Opacity"
                                           FontSize="{DynamicResource FontSizeSm}"
                                           Foreground="{DynamicResource Foreground2Brush}"
                                           Margin="0,16,0,8"/>

                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="50"/>
                                    </Grid.ColumnDefinitions>

                                    <Slider x:Name="BackgroundOpacitySlider" Style="{StaticResource PhobosSlider}"
                                            Grid.Column="0"
                                            Minimum="0"
                                            Maximum="100"
                                            Value="100"
                                            VerticalAlignment="Center"
                                            ValueChanged="BackgroundOpacitySlider_ValueChanged"/>

                                    <TextBlock x:Name="OpacityValueText"
                                               Grid.Column="1"
                                               Text="100%"
                                               FontSize="{DynamicResource FontSizeSm}"
                                               Foreground="{DynamicResource Foreground2Brush}"
                                               HorizontalAlignment="Right"
                                               VerticalAlignment="Center"/>
                                </Grid>
                            </StackPanel>
                        </ScrollViewer>

                        <!-- 保存按钮 -->
                        <Button Grid.Row="2" Style="{StaticResource PhobosButton}"
                                x:Name="SaveSettingsButton"
                                Content="Save Settings"
                                Height="40"
                                Background="{DynamicResource PrimaryBrush}"
                                Foreground="{DynamicResource Foreground1Brush}"
                                BorderThickness="0"
                                FontSize="{DynamicResource FontSizeMd}"
                                Cursor="Hand"
                                Click="SaveSettingsButton_Click">
                            <Button.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="6"/>
                                </Style>
                            </Button.Resources>
                        </Button>
                    </Grid>
                </Border>
            </Grid>

            <!-- 自定义菜单 -->
                <localc:PCODesktopMenu x:Name="DesktopMenu" Grid.RowSpan="2"/>

        </Grid>
        </PhobosClipBorder:ClippingBorder>
    </Border>
</Window>