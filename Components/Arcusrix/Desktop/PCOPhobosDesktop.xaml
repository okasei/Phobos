<Window x:Class="Phobos.Components.Arcusrix.Desktop.PCOPhobosDesktop"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Phobos.Components.Arcusrix.Desktop"
        mc:Ignorable="d"
        Title="Phobos Desktop"
        Width="1200"
        Height="800"
        MinWidth="800"
        MinHeight="600"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="CanResize"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <ResourceDictionary>
            <!-- çª—å£æŽ§åˆ¶æŒ‰é’®æ ·å¼ -->
            <Style x:Key="WindowControlButtonStyle" TargetType="Button">
                <Setter Property="Width" Value="46"/>
                <Setter Property="Height" Value="32"/>
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="Foreground" Value="{DynamicResource Foreground2Brush}"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderThickness="0">
                                <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="{DynamicResource Background3Brush}"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="{DynamicResource Background4Brush}"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <!-- å…³é—­æŒ‰é’®æ ·å¼ -->
            <Style x:Key="CloseButtonStyle" TargetType="Button" BasedOn="{StaticResource WindowControlButtonStyle}">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderThickness="0">
                                <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="{DynamicResource DangerBrush}"/>
                                    <Setter Property="Foreground" Value="{DynamicResource Foreground1Brush}"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="{DynamicResource DangerBrush}"/>
                                    <Setter TargetName="border" Property="Opacity" Value="0.8"/>
                                    <Setter Property="Foreground" Value="{DynamicResource Foreground1Brush}"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <!-- æ¡Œé¢å›¾æ ‡æ ·å¼ -->
            <Style x:Key="DesktopIconStyle" TargetType="Border">
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="Margin" Value="4"/>
            </Style>

            <!-- æ–‡ä»¶å¤¹å›¾æ ‡æ ·å¼ -->
            <Style x:Key="FolderIconStyle" TargetType="Border">
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="Margin" Value="4"/>
            </Style>

            <!-- ä¸Šä¸‹æ–‡èœå•æ ·å¼ -->
            <Style x:Key="ContextMenuStyle" TargetType="ContextMenu">
                <Setter Property="Background" Value="{DynamicResource Background2Brush}"/>
                <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="Padding" Value="4"/>
                <Setter Property="HasDropShadow" Value="True"/>
            </Style>

            <Style x:Key="ContextMenuItemStyle" TargetType="MenuItem">
                <Setter Property="Foreground" Value="{DynamicResource Foreground1Brush}"/>
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="Padding" Value="12,8"/>
                <Setter Property="FontSize" Value="{DynamicResource FontSizeSm}"/>
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="Background" Value="{DynamicResource Background3Brush}"/>
                    </Trigger>
                </Style.Triggers>
            </Style>
        </ResourceDictionary>
    </Window.Resources>

    <!-- ä¸»å®¹å™¨ -->
    <Border x:Name="MainBorder"
            Background="{DynamicResource Background1Brush}"
            BorderBrush="{DynamicResource Background4Brush}"
            BorderThickness="1"
            CornerRadius="8"
            Margin="10">

        <Border.Effect>
            <DropShadowEffect Color="Black"
                              BlurRadius="20"
                              ShadowDepth="0"
                              Opacity="0.3"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <!-- æ ‡é¢˜æ  -->
                <RowDefinition Height="48"/>
                <!-- å†…å®¹åŒºåŸŸ -->
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- èƒŒæ™¯å›¾ç‰‡å±‚ -->
            <Image x:Name="BackgroundImage"
                   Grid.RowSpan="2"
                   Stretch="UniformToFill"
                   Visibility="Collapsed"/>

            <!-- æ ‡é¢˜æ  -->
            <Grid x:Name="TitleBar"
                  Grid.Row="0"
                  Background="{DynamicResource Background2Brush}"
                  MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- å·¦ä¾§ï¼šå›¾æ ‡å’Œæ ‡é¢˜ -->
                <StackPanel Grid.Column="0"
                            Orientation="Horizontal"
                            Margin="16,0,0,0"
                            VerticalAlignment="Center">

                    <!-- çª—å£å›¾æ ‡ -->
                    <Image x:Name="WindowIcon"
                           Width="20"
                           Height="20"
                           Margin="0,0,10,0"
                           VerticalAlignment="Center"/>

                    <!-- æ ‡é¢˜æ–‡æœ¬ -->
                    <TextBlock x:Name="TitleText"
                               Text="Phobos Desktop"
                               FontSize="13"
                               FontWeight="Normal"
                               Foreground="{DynamicResource Foreground1Brush}"
                               VerticalAlignment="Center"/>
                </StackPanel>

                <!-- ä¸­é—´ï¼šæœç´¢æ  -->
                <Border x:Name="SearchBorder"
                        Grid.Column="1"
                        Background="{DynamicResource Background3Brush}"
                        CornerRadius="6"
                        Margin="20,8"
                        MinWidth="300"
                        Width="400"
                        HorizontalAlignment="Center">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- æœç´¢å›¾æ ‡ -->
                        <TextBlock Grid.Column="0"
                                   Text="ðŸ”"
                                   FontSize="12"
                                   Margin="10,0,6,0"
                                   VerticalAlignment="Center"
                                   Opacity="0.6"/>

                        <!-- æœç´¢è¾“å…¥æ¡† -->
                        <TextBox x:Name="SearchBox"
                                 Grid.Column="1"
                                 Background="Transparent"
                                 BorderThickness="0"
                                 Foreground="{DynamicResource Foreground1Brush}"
                                 FontSize="13"
                                 VerticalAlignment="Center"
                                 Padding="0,6"
                                 MinWidth="200"
                                 TextChanged="SearchBox_TextChanged"/>

                        <!-- å ä½ç¬¦æ–‡æœ¬ -->
                        <TextBlock x:Name="SearchPlaceholder"
                                   Grid.Column="1"
                                   Text="Search plugins..."
                                   FontSize="13"
                                   Foreground="{DynamicResource Foreground3Brush}"
                                   VerticalAlignment="Center"
                                   Margin="0,6"
                                   IsHitTestVisible="False"/>

                        <!-- æ¸…é™¤æŒ‰é’® -->
                        <Button x:Name="SearchClearButton"
                                Grid.Column="2"
                                Content="âœ•"
                                FontSize="10"
                                Width="24"
                                Height="24"
                                Background="Transparent"
                                BorderThickness="0"
                                Foreground="{DynamicResource Foreground3Brush}"
                                Cursor="Hand"
                                Visibility="Collapsed"
                                Click="SearchClearButton_Click"/>
                    </Grid>
                </Border>

                <!-- å³ä¾§ç©ºç™½åŒºåŸŸï¼ˆå¯æ‹–åŠ¨ï¼‰ -->
                <Grid Grid.Column="2" Width="50"/>

                <!-- å³ä¾§ï¼šçª—å£æŽ§åˆ¶æŒ‰é’® -->
                <StackPanel Grid.Column="3"
                            Orientation="Horizontal"
                            HorizontalAlignment="Right">

                    <!-- æœ€å°åŒ–æŒ‰é’® -->
                    <Button x:Name="MinimizeButton"
                            Style="{StaticResource WindowControlButtonStyle}"
                            Click="MinimizeButton_Click"
                            ToolTip="Minimize">
                        <Path Data="M0,0 L10,0"
                              Stroke="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}"
                              StrokeThickness="1"
                              Width="10"
                              Height="1"/>
                    </Button>

                    <!-- å…³é—­æŒ‰é’® -->
                    <Button x:Name="CloseButton"
                            Style="{StaticResource CloseButtonStyle}"
                            Click="CloseButton_Click"
                            ToolTip="Close">
                        <Path Data="M0,0 L10,10 M10,0 L0,10"
                              Stroke="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}"
                              StrokeThickness="1"
                              Width="10"
                              Height="10"/>
                    </Button>
                </StackPanel>
            </Grid>

            <!-- æ¡Œé¢å›¾æ ‡æ»šåŠ¨å®¹å™¨ -->
            <ScrollViewer x:Name="DesktopScrollViewer"
                          Grid.Row="1"
                          VerticalScrollBarVisibility="Auto"
                          HorizontalScrollBarVisibility="Disabled"
                          Background="Transparent">
                <Grid x:Name="DesktopGrid"
                      Background="Transparent"
                      MouseRightButtonDown="DesktopGrid_MouseRightButtonDown"
                      Margin="20">
                    <!-- åŠ¨æ€ç”Ÿæˆçš„ç½‘æ ¼å°†åœ¨æ­¤å¤„æ·»åŠ  -->
                </Grid>
            </ScrollViewer>

            <!-- æ–‡ä»¶å¤¹å¼¹å‡ºçª—å£é®ç½© -->
            <Grid x:Name="FolderOverlay"
                  Grid.Row="1"
                  Background="#80000000"
                  Visibility="Collapsed"
                  MouseLeftButtonDown="FolderOverlay_MouseLeftButtonDown">

                <!-- æ–‡ä»¶å¤¹å†…å®¹é¢æ¿ -->
                <Border x:Name="FolderPanel"
                        Background="{DynamicResource Background2Brush}"
                        BorderBrush="{DynamicResource BorderBrush}"
                        BorderThickness="1"
                        CornerRadius="12"
                        MaxWidth="600"
                        MaxHeight="500"
                        Padding="20"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center">

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- æ–‡ä»¶å¤¹æ ‡é¢˜ -->
                        <TextBlock x:Name="FolderTitle"
                                   Grid.Row="0"
                                   Text="Folder"
                                   FontSize="{DynamicResource FontSizeLg}"
                                   FontWeight="{DynamicResource FontWeightSemibold}"
                                   Foreground="{DynamicResource Foreground1Brush}"
                                   Margin="0,0,0,16"/>

                        <!-- æ–‡ä»¶å¤¹å†…çš„å›¾æ ‡ç½‘æ ¼ -->
                        <ScrollViewer Grid.Row="1"
                                      VerticalScrollBarVisibility="Auto"
                                      HorizontalScrollBarVisibility="Disabled">
                            <ItemsControl x:Name="FolderItemsControl">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <WrapPanel Orientation="Horizontal"/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                            </ItemsControl>
                        </ScrollViewer>
                    </Grid>
                </Border>
            </Grid>

            <!-- è®¾ç½®é¢æ¿é®ç½© -->
            <Grid x:Name="SettingsOverlay"
                  Grid.RowSpan="2"
                  Background="#80000000"
                  Visibility="Collapsed"
                  MouseLeftButtonDown="SettingsOverlay_MouseLeftButtonDown">

                <!-- è®¾ç½®é¢æ¿ -->
                <Border x:Name="SettingsPanel"
                        Background="{DynamicResource Background2Brush}"
                        BorderBrush="{DynamicResource BorderBrush}"
                        BorderThickness="1"
                        CornerRadius="12"
                        Width="450"
                        MaxHeight="600"
                        Padding="24"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        RenderTransformOrigin="0.5,0.5">

                    <Border.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform x:Name="SettingsScale" ScaleX="1" ScaleY="1"/>
                            <TranslateTransform x:Name="SettingsTranslate" Y="0"/>
                        </TransformGroup>
                    </Border.RenderTransform>

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- æ ‡é¢˜æ  -->
                        <Grid Grid.Row="0" Margin="0,0,0,20">
                            <TextBlock x:Name="SettingsTitleText"
                                       Text="Desktop Settings"
                                       FontSize="{DynamicResource FontSizeLg}"
                                       FontWeight="{DynamicResource FontWeightSemibold}"
                                       Foreground="{DynamicResource Foreground1Brush}"
                                       VerticalAlignment="Center"/>

                            <Button x:Name="SettingsCloseButton"
                                    Content="âœ•"
                                    Width="32"
                                    Height="32"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    Foreground="{DynamicResource Foreground3Brush}"
                                    FontSize="14"
                                    Cursor="Hand"
                                    HorizontalAlignment="Right"
                                    Click="SettingsCloseButton_Click"/>
                        </Grid>

                        <!-- è®¾ç½®å†…å®¹ -->
                        <ScrollViewer Grid.Row="1"
                                      VerticalScrollBarVisibility="Auto"
                                      Margin="0,0,0,16">
                            <StackPanel>
                                <!-- èƒŒæ™¯å›¾ç‰‡è®¾ç½® -->
                                <TextBlock x:Name="BackgroundImageLabel"
                                           Text="Background Image"
                                           FontSize="{DynamicResource FontSizeMd}"
                                           FontWeight="{DynamicResource FontWeightMedium}"
                                           Foreground="{DynamicResource Foreground1Brush}"
                                           Margin="0,0,0,12"/>

                                <!-- å½“å‰èƒŒæ™¯é¢„è§ˆ -->
                                <Border Background="{DynamicResource Background3Brush}"
                                        BorderBrush="{DynamicResource BorderBrush}"
                                        BorderThickness="1"
                                        CornerRadius="8"
                                        Height="120"
                                        Margin="0,0,0,12">
                                    <Grid>
                                        <Image x:Name="BackgroundPreview"
                                               Stretch="UniformToFill"/>
                                        <TextBlock x:Name="NoBackgroundText"
                                                   Text="No background image"
                                                   FontSize="{DynamicResource FontSizeSm}"
                                                   Foreground="{DynamicResource Foreground3Brush}"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"/>
                                    </Grid>
                                </Border>

                                <!-- èƒŒæ™¯å›¾ç‰‡è·¯å¾„ -->
                                <Grid Margin="0,0,0,12">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBox x:Name="BackgroundPathTextBox"
                                             Grid.Column="0"
                                             Background="{DynamicResource Background3Brush}"
                                             BorderBrush="{DynamicResource BorderBrush}"
                                             BorderThickness="1"
                                             Foreground="{DynamicResource Foreground1Brush}"
                                             FontSize="{DynamicResource FontSizeSm}"
                                             Padding="10,8"
                                             IsReadOnly="True"/>

                                    <Button x:Name="BrowseBackgroundButton"
                                            Grid.Column="1"
                                            Content="Browse"
                                            Width="70"
                                            Height="34"
                                            Background="{DynamicResource Background3Brush}"
                                            Foreground="{DynamicResource Foreground1Brush}"
                                            BorderThickness="0"
                                            FontSize="{DynamicResource FontSizeSm}"
                                            Cursor="Hand"
                                            Margin="8,0,0,0"
                                            Click="BrowseBackgroundButton_Click">
                                        <Button.Resources>
                                            <Style TargetType="Border">
                                                <Setter Property="CornerRadius" Value="6"/>
                                            </Style>
                                        </Button.Resources>
                                    </Button>

                                    <Button x:Name="ClearBackgroundButton"
                                            Grid.Column="2"
                                            Content="Clear"
                                            Width="60"
                                            Height="34"
                                            Background="{DynamicResource DangerBrush}"
                                            Foreground="{DynamicResource Foreground1Brush}"
                                            BorderThickness="0"
                                            FontSize="{DynamicResource FontSizeSm}"
                                            Cursor="Hand"
                                            Margin="8,0,0,0"
                                            Click="ClearBackgroundButton_Click">
                                        <Button.Resources>
                                            <Style TargetType="Border">
                                                <Setter Property="CornerRadius" Value="6"/>
                                            </Style>
                                        </Button.Resources>
                                    </Button>
                                </Grid>

                                <!-- ç¼©æ”¾æ¨¡å¼ -->
                                <TextBlock x:Name="ScaleModeLabel"
                                           Text="Scaling Mode"
                                           FontSize="{DynamicResource FontSizeSm}"
                                           Foreground="{DynamicResource Foreground2Brush}"
                                           Margin="0,8,0,8"/>

                                <ComboBox x:Name="ScaleModeComboBox"
                                          Background="{DynamicResource Background3Brush}"
                                          Foreground="{DynamicResource Foreground1Brush}"
                                          BorderBrush="{DynamicResource BorderBrush}"
                                          BorderThickness="1"
                                          Padding="10,8"
                                          FontSize="{DynamicResource FontSizeSm}"
                                          SelectionChanged="ScaleModeComboBox_SelectionChanged">
                                    <ComboBoxItem x:Name="ScaleModeFill" Content="Fill (Crop to fit)" Tag="UniformToFill"/>
                                    <ComboBoxItem x:Name="ScaleModeFit" Content="Fit (Show entire image)" Tag="Uniform"/>
                                    <ComboBoxItem x:Name="ScaleModeStretch" Content="Stretch (Distort to fit)" Tag="Fill"/>
                                    <ComboBoxItem x:Name="ScaleModeTile" Content="Tile" Tag="None"/>
                                </ComboBox>

                                <!-- èƒŒæ™¯é€æ˜Žåº¦ -->
                                <TextBlock x:Name="BackgroundOpacityLabel"
                                           Text="Background Opacity"
                                           FontSize="{DynamicResource FontSizeSm}"
                                           Foreground="{DynamicResource Foreground2Brush}"
                                           Margin="0,16,0,8"/>

                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="50"/>
                                    </Grid.ColumnDefinitions>

                                    <Slider x:Name="BackgroundOpacitySlider"
                                            Grid.Column="0"
                                            Minimum="0"
                                            Maximum="100"
                                            Value="100"
                                            VerticalAlignment="Center"
                                            ValueChanged="BackgroundOpacitySlider_ValueChanged"/>

                                    <TextBlock x:Name="OpacityValueText"
                                               Grid.Column="1"
                                               Text="100%"
                                               FontSize="{DynamicResource FontSizeSm}"
                                               Foreground="{DynamicResource Foreground2Brush}"
                                               HorizontalAlignment="Right"
                                               VerticalAlignment="Center"/>
                                </Grid>
                            </StackPanel>
                        </ScrollViewer>

                        <!-- ä¿å­˜æŒ‰é’® -->
                        <Button Grid.Row="2"
                                x:Name="SaveSettingsButton"
                                Content="Save Settings"
                                Height="40"
                                Background="{DynamicResource PrimaryBrush}"
                                Foreground="{DynamicResource Foreground1Brush}"
                                BorderThickness="0"
                                FontSize="{DynamicResource FontSizeMd}"
                                Cursor="Hand"
                                Click="SaveSettingsButton_Click">
                            <Button.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="6"/>
                                </Style>
                            </Button.Resources>
                        </Button>
                    </Grid>
                </Border>
            </Grid>

            <!-- è‡ªå®šä¹‰èœå• -->
            <local:PCODesktopMenu x:Name="DesktopMenu" Grid.RowSpan="2"/>

        </Grid>
    </Border>
</Window>