<Window x:Class="Phobos.Components.Arcusrix.Desktop.Components.PCOHotkeyDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Set Hotkey"
        Width="450"
        Height="320"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        WindowStartupLocation="CenterOwner"
        Loaded="Window_Loaded"
        PreviewKeyDown="Window_PreviewKeyDown">

    <Border x:Name="MainBorder"
            Background="{DynamicResource Background2Brush}"
            BorderBrush="{DynamicResource BorderBrush}"
            BorderThickness="1"
            CornerRadius="12"
            Margin="20"
            RenderTransformOrigin="0.5,0.5">

        <Border.RenderTransform>
            <TransformGroup>
                <ScaleTransform x:Name="DialogScale" ScaleX="1" ScaleY="1"/>
                <TranslateTransform x:Name="DialogTranslate" Y="0"/>
            </TransformGroup>
        </Border.RenderTransform>

        <Border.Effect>
            <DropShadowEffect Color="Black"
                              BlurRadius="20"
                              ShadowDepth="0"
                              Opacity="0.3"/>
        </Border.Effect>

        <Grid Margin="24">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Title -->
            <Grid Grid.Row="0" Margin="0,0,0,20">
                <TextBlock x:Name="DialogTitle"
                           Text="Set Hotkey"
                           FontSize="{DynamicResource FontSizeLg}"
                           FontWeight="{DynamicResource FontWeightSemibold}"
                           Foreground="{DynamicResource Foreground1Brush}"
                           VerticalAlignment="Center"/>

                <Button x:Name="CloseButton"
                        Style="{StaticResource PhobosButtonIcon}"
                        Content="&#10005;"
                        Width="32"
                        Height="32"
                        Background="Transparent"
                        Foreground="{DynamicResource Foreground3Brush}"
                        FontSize="14"
                        HorizontalAlignment="Right"
                        Click="CloseButton_Click"/>
            </Grid>

            <!-- Content -->
            <StackPanel Grid.Row="1" VerticalAlignment="Center">
                <!-- Hint -->
                <TextBlock x:Name="HintLabel"
                           Text="Press the key combination you want to use:"
                           FontSize="{DynamicResource FontSizeSm}"
                           Foreground="{DynamicResource Foreground2Brush}"
                           TextAlignment="Center"
                           Margin="0,0,0,16"/>

                <!-- Hotkey Display -->
                <Border Background="{DynamicResource Background3Brush}"
                        BorderBrush="{DynamicResource BorderBrush}"
                        BorderThickness="2"
                        CornerRadius="8"
                        Padding="20,16">
                    <TextBlock x:Name="HotkeyDisplay"
                               Text="Press a key..."
                               FontSize="20"
                               FontWeight="{DynamicResource FontWeightSemibold}"
                               Foreground="{DynamicResource Foreground1Brush}"
                               TextAlignment="Center"
                               HorizontalAlignment="Center"/>
                </Border>
            </StackPanel>

            <!-- Buttons -->
            <Grid Grid.Row="2">
                <!-- Clear Button (Left) -->
                <Button x:Name="ClearButton" Style="{StaticResource PhobosButtonDanger}"
                        Content="Clear Hotkey"
                        Height="40"
                        Background="{DynamicResource DangerBrush}"
                        Foreground="{DynamicResource Foreground1Brush}"
                        BorderThickness="0"
                        FontSize="{DynamicResource FontSizeMd}"
                        Cursor="Hand"
                        HorizontalAlignment="Left"
                        Padding="16,0"
                        Click="ClearButton_Click">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="6"/>
                        </Style>
                    </Button.Resources>
                </Button>

                <!-- Cancel and Save (Right) -->
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Right">
                    <Button x:Name="CancelButton" Style="{StaticResource PhobosButton}"
                            Content="Cancel"
                            Width="100"
                            Height="40"
                            Background="{DynamicResource Background3Brush}"
                            Foreground="{DynamicResource Foreground1Brush}"
                            BorderThickness="0"
                            FontSize="{DynamicResource FontSizeMd}"
                            Cursor="Hand"
                            Margin="0,0,12,0"
                            Click="CancelButton_Click">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="6"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                    <Button x:Name="SaveButton" Style="{StaticResource PhobosButton}"
                            Content="Save"
                            Width="100"
                            Height="40"
                            Background="{DynamicResource PrimaryBrush}"
                            Foreground="{DynamicResource Foreground1Brush}"
                            BorderThickness="0"
                            FontSize="{DynamicResource FontSizeMd}"
                            Cursor="Hand"
                            Click="SaveButton_Click">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="6"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                </StackPanel>
            </Grid>
        </Grid>
    </Border>
</Window>
