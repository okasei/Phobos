<UserControl x:Class="Phobos.Components.Arcusrix.Installer.PCOInstaller"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="550">

    <UserControl.Resources>
        <!-- 缓动函数 -->
        <CubicEase x:Key="EaseOut" EasingMode="EaseOut"/>
        <CubicEase x:Key="EaseInOut" EasingMode="EaseInOut"/>

        <!-- 动画时长 -->
        <sys:TimeSpan x:Key="AnimationDuration">0:0:0.25</sys:TimeSpan>

        <!-- 尺寸资源 -->
        <sys:Double x:Key="PluginIconSize">72</sys:Double>
        <sys:Double x:Key="FontSizeTitle">18</sys:Double>
        <sys:Double x:Key="FontSizePluginName">22</sys:Double>
        <sys:Double x:Key="FontSizeVersion">12</sys:Double>
        <sys:Double x:Key="FontSizeManufacturer">13</sys:Double>
        <sys:Double x:Key="FontSizeDescription">14</sys:Double>
        <sys:Double x:Key="FontSizeButton">14</sys:Double>
        <sys:Double x:Key="FontSizeDependency">13</sys:Double>
        <CornerRadius x:Key="CardCornerRadius">8</CornerRadius>
        <Thickness x:Key="ContentPadding">20</Thickness>

        <!-- 按钮样式 -->
        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource PrimaryBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource Foreground1Brush}"/>
            <Setter Property="FontSize" Value="{StaticResource FontSizeButton}"/>
            <Setter Property="Padding" Value="24,10"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{DynamicResource PrimaryHoverBrush}"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SecondaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{DynamicResource Foreground2Brush}"/>
            <Setter Property="FontSize" Value="{StaticResource FontSizeButton}"/>
            <Setter Property="Padding" Value="24,10"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{DynamicResource Background2Brush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="BackButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{DynamicResource Foreground2Brush}"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="&#xE72B;" FontFamily="Segoe MDL2 Assets" FontSize="12" Margin="0,0,6,0" VerticalAlignment="Center"/>
                                <ContentPresenter VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{DynamicResource Background2Brush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- 依赖项样式 -->
        <Style x:Key="DependencyItemStyle" TargetType="Border">
            <Setter Property="Background" Value="{DynamicResource Background2Brush}"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
        </Style>
    </UserControl.Resources>

    <Border Background="{DynamicResource Background3Brush}" CornerRadius="{StaticResource CardCornerRadius}">
        <Grid>
            <!-- 模式1: 文件选择视图 -->
            <Grid x:Name="FileSelectView" Visibility="Visible">
                <Grid.RenderTransform>
                    <TranslateTransform x:Name="FileSelectViewTransform"/>
                </Grid.RenderTransform>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- 标题 -->
                <TextBlock x:Name="TitleText"
                           Grid.Row="0"
                           Text="插件安装器"
                           FontSize="{StaticResource FontSizeTitle}"
                           FontWeight="Bold"
                           Foreground="{DynamicResource Foreground1Brush}"
                           Margin="20,20,20,0"/>

                <!-- 文件选择区域 -->
                <Grid Grid.Row="1" Margin="20">
                    <Border Background="{DynamicResource Background2Brush}"
                            BorderBrush="{DynamicResource BorderBrush}"
                            BorderThickness="2"
                            CornerRadius="12"
                            AllowDrop="True"
                            x:Name="DropZone"
                            Drop="DropZone_Drop"
                            DragOver="DropZone_DragOver"
                            DragLeave="DropZone_DragLeave">
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                            <TextBlock Text="📦" FontSize="48" HorizontalAlignment="Center" Margin="0,0,0,16"/>
                            <TextBlock x:Name="DropHintText"
                                       Text="拖放插件文件到这里"
                                       FontSize="16"
                                       Foreground="{DynamicResource Foreground2Brush}"
                                       HorizontalAlignment="Center"/>
                            <TextBlock x:Name="OrText"
                                       Text="或"
                                       FontSize="14"
                                       Foreground="{DynamicResource Foreground3Brush}"
                                       HorizontalAlignment="Center"
                                       Margin="0,12"/>
                            <Button x:Name="BrowseButton"
                                    Content="浏览文件"
                                    Style="{StaticResource PrimaryButtonStyle}"
                                    Click="BrowseButton_Click"
                                    HorizontalAlignment="Center"/>
                            <TextBlock x:Name="SupportedFilesText"
                                       Text="支持 .dll 文件"
                                       FontSize="12"
                                       Foreground="{DynamicResource Foreground4Brush}"
                                       HorizontalAlignment="Center"
                                       Margin="0,16,0,0"/>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- 状态栏 -->
                <Border Grid.Row="2" 
                        Background="{DynamicResource Background2Brush}"
                        Padding="20,12">
                    <TextBlock x:Name="FileSelectStatus" 
                               Text="就绪" 
                               FontSize="13"
                               Foreground="{DynamicResource Foreground3Brush}"/>
                </Border>
            </Grid>

            <!-- 模式2: 多插件选择视图 -->
            <Grid x:Name="MultiPluginSelectView" Visibility="Collapsed" Opacity="0">
                <Grid.RenderTransform>
                    <TranslateTransform x:Name="MultiPluginSelectViewTransform"/>
                </Grid.RenderTransform>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- 返回按钮 -->
                <Button x:Name="MultiPluginBackButton"
                        Grid.Row="0"
                        Content="返回"
                        Style="{StaticResource BackButtonStyle}"
                        Click="MultiPluginBackButton_Click"
                        HorizontalAlignment="Left"
                        Margin="20,16,20,0"/>

                <!-- 标题区域 -->
                <StackPanel Grid.Row="1" Margin="20,16,20,0">
                    <TextBlock x:Name="MultiPluginTitleText"
                               Text="发现多个插件"
                               FontSize="{StaticResource FontSizeTitle}"
                               FontWeight="Bold"
                               Foreground="{DynamicResource Foreground1Brush}"/>
                    <TextBlock x:Name="MultiPluginSubtitle"
                               Text="此 DLL 包含多个插件，请选择要安装的插件"
                               FontSize="14"
                               Foreground="{DynamicResource Foreground2Brush}"
                               Margin="0,8,0,0"/>
                </StackPanel>

                <!-- 插件列表 -->
                <ScrollViewer Grid.Row="2"
                              VerticalScrollBarVisibility="Auto"
                              Margin="20,16,20,0">
                    <ItemsControl x:Name="MultiPluginList">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="{DynamicResource Background2Brush}"
                                        CornerRadius="8"
                                        Padding="16"
                                        Margin="0,0,0,12"
                                        Cursor="Hand"
                                        MouseLeftButtonUp="PluginItem_Click">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- 图标占位 -->
                                        <Border Grid.Column="0"
                                                Width="48" Height="48"
                                                CornerRadius="8"
                                                Background="{DynamicResource Background3Brush}">
                                            <TextBlock Text="📦" FontSize="24"
                                                       HorizontalAlignment="Center"
                                                       VerticalAlignment="Center"/>
                                        </Border>

                                        <!-- 插件信息 -->
                                        <StackPanel Grid.Column="1"
                                                    VerticalAlignment="Center"
                                                    Margin="12,0,0,0">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="{Binding Name}"
                                                           FontSize="15"
                                                           FontWeight="SemiBold"
                                                           Foreground="{DynamicResource Foreground1Brush}"/>
                                                <TextBlock Text="{Binding Version, StringFormat=' v{0}'}"
                                                           FontSize="12"
                                                           Foreground="{DynamicResource Foreground4Brush}"
                                                           VerticalAlignment="Bottom"
                                                           Margin="6,0,0,1"/>
                                            </StackPanel>
                                            <TextBlock Text="{Binding PackageName}"
                                                       FontSize="12"
                                                       Foreground="{DynamicResource Foreground3Brush}"
                                                       Margin="0,2,0,0"/>
                                            <TextBlock Text="{Binding Manufacturer}"
                                                       FontSize="12"
                                                       Foreground="{DynamicResource Foreground4Brush}"
                                                       Margin="0,2,0,0"/>
                                        </StackPanel>

                                        <!-- 箭头 -->
                                        <TextBlock Grid.Column="2"
                                                   Text="&#xE76C;"
                                                   FontFamily="Segoe MDL2 Assets"
                                                   FontSize="14"
                                                   Foreground="{DynamicResource Foreground3Brush}"
                                                   VerticalAlignment="Center"
                                                   Margin="12,0,0,0"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>

                <!-- 底部按钮区域 -->
                <Border Grid.Row="3"
                        Background="{DynamicResource Background2Brush}"
                        Padding="20,16">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- 状态文本 -->
                        <TextBlock x:Name="MultiPluginStatus"
                                   Grid.Column="0"
                                   Text=""
                                   FontSize="13"
                                   Foreground="{DynamicResource Foreground3Brush}"
                                   VerticalAlignment="Center"/>

                        <!-- 上一步按钮 -->
                        <Button x:Name="MultiPluginBackButton2"
                                Grid.Column="1"
                                Content="上一步"
                                Style="{StaticResource SecondaryButtonStyle}"
                                Click="MultiPluginBackButton_Click"
                                Margin="0,0,12,0"/>

                        <!-- 全部安装按钮 -->
                        <Button x:Name="InstallAllButton"
                                Grid.Column="2"
                                Content="全部安装"
                                Style="{StaticResource PrimaryButtonStyle}"
                                Click="InstallAllButton_Click"/>
                    </Grid>
                </Border>
            </Grid>

            <!-- 模式3: 插件详情视图 -->
            <Grid x:Name="PluginDetailView" Visibility="Collapsed" Opacity="0">
                <Grid.RenderTransform>
                    <TranslateTransform x:Name="PluginDetailViewTransform"/>
                </Grid.RenderTransform>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- 返回按钮 (仅在用户主动打开模式下显示) -->
                <Button x:Name="BackButton"
                        Grid.Row="0"
                        Content="返回"
                        Style="{StaticResource BackButtonStyle}"
                        Click="BackButton_Click"
                        HorizontalAlignment="Left"
                        Margin="20,16,20,0"
                        Visibility="Collapsed"/>

                <!-- 插件基本信息 -->
                <Grid Grid.Row="1" Margin="20,16,20,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- 插件图标 -->
                    <Border Grid.Column="0"
                            Width="{StaticResource PluginIconSize}"
                            Height="{StaticResource PluginIconSize}"
                            CornerRadius="12"
                            Background="{DynamicResource Background2Brush}">
                        <Image x:Name="PluginIcon"
                               Stretch="Uniform"
                               Margin="8"/>
                    </Border>

                    <!-- 名称、版本、制造商 -->
                    <StackPanel Grid.Column="1"
                                VerticalAlignment="Center"
                                Margin="16,0,0,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock x:Name="PluginNameText"
                                       Text="插件名称"
                                       FontSize="{StaticResource FontSizePluginName}"
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource Foreground1Brush}"
                                       VerticalAlignment="Bottom"/>
                            <TextBlock x:Name="PluginVersionText"
                                       Text="v1.0.0"
                                       FontSize="{StaticResource FontSizeVersion}"
                                       Foreground="{DynamicResource Foreground4Brush}"
                                       VerticalAlignment="Bottom"
                                       Margin="10,0,0,3"/>
                        </StackPanel>
                        <TextBlock x:Name="PluginManufacturerText"
                                   Text="制造商"
                                   FontSize="{StaticResource FontSizeManufacturer}"
                                   Foreground="{DynamicResource Foreground2Brush}"
                                   Margin="0,4,0,0"/>
                        <TextBlock x:Name="PluginPackageNameText"
                                   Text="com.example.plugin"
                                   FontSize="12"
                                   Foreground="{DynamicResource Foreground4Brush}"
                                   Margin="0,2,0,0"/>
                    </StackPanel>
                </Grid>

                <!-- 内容区域 (描述 + 依赖) -->
                <ScrollViewer Grid.Row="2" 
                              VerticalScrollBarVisibility="Auto"
                              Margin="20,16,20,0">
                    <StackPanel>
                        <!-- 插件描述 -->
                        <TextBlock x:Name="IntroductionLabel"
                                   Text="介绍"
                                   FontSize="14"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource Foreground1Brush}"
                                   Margin="0,0,0,8"/>
                        <Border Background="{DynamicResource Background2Brush}"
                                CornerRadius="8"
                                Padding="16">
                            <TextBlock x:Name="PluginDescriptionText"
                                       Text="暂无描述"
                                       FontSize="{StaticResource FontSizeDescription}"
                                       Foreground="{DynamicResource Foreground2Brush}"
                                       TextWrapping="Wrap"
                                       LineHeight="22"/>
                        </Border>

                        <!-- 依赖信息 -->
                        <StackPanel x:Name="DependencySection" Visibility="Collapsed" Margin="0,20,0,0">
                            <TextBlock x:Name="DependenciesLabel"
                                       Text="依赖项"
                                       FontSize="14"
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource Foreground1Brush}"
                                       Margin="0,0,0,8"/>

                            <!-- 必需依赖 (未满足) -->
                            <StackPanel x:Name="MissingRequiredPanel" Visibility="Collapsed">
                                <Border Background="#2D1F1F"
                                        BorderBrush="#E53935"
                                        BorderThickness="1"
                                        CornerRadius="8"
                                        Padding="16"
                                        Margin="0,0,0,12">
                                    <StackPanel>
                                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                            <TextBlock Text="⚠" FontSize="16" Foreground="#E53935" Margin="0,0,8,0"/>
                                            <TextBlock x:Name="MissingRequiredLabel"
                                                       Text="缺少必需依赖"
                                                       FontSize="14"
                                                       FontWeight="SemiBold"
                                                       Foreground="#E53935"/>
                                        </StackPanel>
                                        <TextBlock x:Name="MissingRequiredHintText"
                                                   Text="以下必需依赖未安装，无法继续安装此插件："
                                                   FontSize="13"
                                                   Foreground="{DynamicResource Foreground2Brush}"
                                                   Margin="0,0,0,8"/>
                                        <ItemsControl x:Name="MissingRequiredList">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <Border Style="{StaticResource DependencyItemStyle}"
                                                            Background="#3D2828">
                                                        <StackPanel Orientation="Horizontal">
                                                            <TextBlock Text="❌" FontSize="12" Margin="0,0,8,0" VerticalAlignment="Center"/>
                                                            <TextBlock Text="{Binding PackageName}" 
                                                                       FontSize="{StaticResource FontSizeDependency}"
                                                                       Foreground="{DynamicResource Foreground1Brush}"
                                                                       VerticalAlignment="Center"/>
                                                            <TextBlock Text="{Binding MinVersion, StringFormat=' (≥{0})'}" 
                                                                       FontSize="12"
                                                                       Foreground="{DynamicResource Foreground4Brush}"
                                                                       VerticalAlignment="Center"
                                                                       Margin="4,0,0,0"/>
                                                        </StackPanel>
                                                    </Border>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </StackPanel>
                                </Border>
                            </StackPanel>

                            <!-- 可选依赖 (未满足) -->
                            <StackPanel x:Name="MissingOptionalPanel" Visibility="Collapsed">
                                <Border Background="#2D2A1F"
                                        BorderBrush="#FFA726"
                                        BorderThickness="1"
                                        CornerRadius="8"
                                        Padding="16"
                                        Margin="0,0,0,12">
                                    <StackPanel>
                                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                            <TextBlock Text="ℹ" FontSize="16" Foreground="#FFA726" Margin="0,0,8,0"/>
                                            <TextBlock x:Name="MissingOptionalLabel"
                                                       Text="缺少可选依赖"
                                                       FontSize="14"
                                                       FontWeight="SemiBold"
                                                       Foreground="#FFA726"/>
                                        </StackPanel>
                                        <TextBlock x:Name="MissingOptionalHintText"
                                                   Text="以下可选依赖未安装，部分功能可能不可用："
                                                   FontSize="13"
                                                   Foreground="{DynamicResource Foreground2Brush}"
                                                   Margin="0,0,0,8"/>
                                        <ItemsControl x:Name="MissingOptionalList">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <Border Style="{StaticResource DependencyItemStyle}"
                                                            Background="#3D3828">
                                                        <StackPanel Orientation="Horizontal">
                                                            <TextBlock Text="⚡" FontSize="12" Margin="0,0,8,0" VerticalAlignment="Center"/>
                                                            <TextBlock Text="{Binding PackageName}" 
                                                                       FontSize="{StaticResource FontSizeDependency}"
                                                                       Foreground="{DynamicResource Foreground1Brush}"
                                                                       VerticalAlignment="Center"/>
                                                            <TextBlock Text="{Binding MinVersion, StringFormat=' (≥{0})'}" 
                                                                       FontSize="12"
                                                                       Foreground="{DynamicResource Foreground4Brush}"
                                                                       VerticalAlignment="Center"
                                                                       Margin="4,0,0,0"/>
                                                        </StackPanel>
                                                    </Border>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </StackPanel>
                                </Border>
                            </StackPanel>

                            <!-- 已满足的依赖 -->
                            <StackPanel x:Name="SatisfiedDependencyPanel" Visibility="Collapsed">
                                <TextBlock x:Name="SatisfiedDependenciesLabel"
                                           Text="已满足的依赖"
                                           FontSize="13"
                                           Foreground="{DynamicResource Foreground3Brush}"
                                           Margin="0,0,0,8"/>
                                <ItemsControl x:Name="SatisfiedDependencyList">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Style="{StaticResource DependencyItemStyle}">
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="✓" FontSize="12" Foreground="#4CAF50" Margin="0,0,8,0" VerticalAlignment="Center"/>
                                                    <TextBlock Text="{Binding PackageName}" 
                                                               FontSize="{StaticResource FontSizeDependency}"
                                                               Foreground="{DynamicResource Foreground2Brush}"
                                                               VerticalAlignment="Center"/>
                                                </StackPanel>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>

                <!-- 底部按钮区域 -->
                <Border Grid.Row="3"
                        Background="{DynamicResource Background2Brush}"
                        Padding="20,16">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- 状态文本 -->
                        <TextBlock x:Name="InstallStatus"
                                   Grid.Column="0"
                                   Text=""
                                   FontSize="13"
                                   Foreground="{DynamicResource Foreground3Brush}"
                                   VerticalAlignment="Center"/>

                        <!-- 上一步按钮 -->
                        <Button x:Name="DetailBackButton"
                                Grid.Column="1"
                                Content="上一步"
                                Style="{StaticResource SecondaryButtonStyle}"
                                Click="DetailBackButton_Click"
                                Margin="0,0,12,0"/>

                        <!-- 安装按钮 -->
                        <Button x:Name="InstallButton"
                                Grid.Column="2"
                                Content="开始安装"
                                Style="{StaticResource PrimaryButtonStyle}"
                                Click="InstallButton_Click"/>
                    </Grid>
                </Border>
            </Grid>

            <!-- 加载遮罩 -->
            <Border x:Name="LoadingOverlay"
                    Background="#80000000"
                    Visibility="Collapsed">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <TextBlock Text="⏳" FontSize="32" HorizontalAlignment="Center" Margin="0,0,0,12"/>
                    <TextBlock x:Name="LoadingText"
                               Text="正在处理..."
                               FontSize="14"
                               Foreground="{DynamicResource Foreground1Brush}"
                               HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</UserControl>
