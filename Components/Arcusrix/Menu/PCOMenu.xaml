<UserControl x:Class="Phobos.Components.Arcusrix.Menu.PCOMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignWidth="200"
             d:DesignHeight="250"
             HorizontalAlignment="Left"
             VerticalAlignment="Top"
             Visibility="Collapsed">

    <UserControl.Resources>
        <ResourceDictionary>
            <!-- 菜单项样式 -->
            <Style x:Key="MenuItemStyle" TargetType="Border">
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="Padding" Value="12,8"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="Background" Value="{DynamicResource Background3Brush}"/>
                    </Trigger>
                </Style.Triggers>
            </Style>

            <!-- 危险项样式 -->
            <Style x:Key="DangerMenuItemStyle" TargetType="Border">
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="Padding" Value="12,8"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="Background" Value="{DynamicResource DangerBrush}"/>
                    </Trigger>
                </Style.Triggers>
            </Style>

            <!-- 禁用项样式 -->
            <Style x:Key="DisabledMenuItemStyle" TargetType="Border">
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="Padding" Value="12,8"/>
                <Setter Property="Opacity" Value="0.5"/>
            </Style>
        </ResourceDictionary>
    </UserControl.Resources>

    <!-- 菜单容器 -->
    <Border x:Name="MenuBorder"
            Background="{DynamicResource Background2Brush}"
            BorderBrush="{DynamicResource Background4Brush}"
            BorderThickness="1"
            CornerRadius="8"
            MinWidth="160"
            MaxWidth="300"
            Opacity="0"
            RenderTransformOrigin="0,0">

        <Border.RenderTransform>
            <TransformGroup>
                <ScaleTransform x:Name="MenuScale" ScaleX="0.95" ScaleY="0.95"/>
                <TranslateTransform x:Name="MenuTranslate" Y="-5"/>
            </TransformGroup>
        </Border.RenderTransform>

        <Border.Effect>
            <DropShadowEffect Color="Black"
                              BlurRadius="16"
                              ShadowDepth="4"
                              Opacity="0.3"/>
        </Border.Effect>

        <StackPanel x:Name="MenuItemsPanel"
                    Margin="4"/>
    </Border>
</UserControl>
