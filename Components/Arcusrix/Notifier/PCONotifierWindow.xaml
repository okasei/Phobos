<Window x:Class="Phobos.Components.Arcusrix.Notifier.PCONotifierWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PhobosNotifier"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        ShowInTaskbar="False"
        ResizeMode="NoResize"
        Width="420"
        SizeToContent="Height"
        WindowStartupLocation="Manual">

    <Window.Resources>
        <!-- 灵动岛样式按钮 -->
        <Style x:Key="NotifierButton" TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource Background4Brush}"/>
            <Setter Property="Foreground" Value="{DynamicResource Foreground1Brush}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontFamily" Value="{DynamicResource FontPrimary}"/>
            <Setter Property="FontSize" Value="{DynamicResource FontSizeSm}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="{DynamicResource CornerRadiusMdAll}"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{DynamicResource Background5Brush}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{DynamicResource BorderLightBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Primary 按钮样式 -->
        <Style x:Key="NotifierButtonPrimary" TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource PrimaryBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource Foreground1Brush}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontFamily" Value="{DynamicResource FontPrimary}"/>
            <Setter Property="FontSize" Value="{DynamicResource FontSizeSm}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="{DynamicResource CornerRadiusMdAll}"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{DynamicResource PrimaryHoverBrush}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{DynamicResource PrimaryPressedBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <!-- 主容器 - 灵动岛形状 -->
    <Border x:Name="MainBorder"
            Background="{DynamicResource Background2Brush}"
            CornerRadius="24"
            MinWidth="120"
            Margin="10"
            HorizontalAlignment="Center"
            Cursor="Hand"
            MouseEnter="OnMouseEnter"
            MouseLeave="OnMouseLeave"
            MouseLeftButtonUp="OnContentClick"
            RenderTransformOrigin="0.5,0">
        <Border.RenderTransform>
            <TransformGroup>
                <ScaleTransform x:Name="BorderScale" ScaleX="1" ScaleY="1"/>
                <TranslateTransform x:Name="BorderTranslate" Y="0"/>
            </TransformGroup>
        </Border.RenderTransform>

        <Border.Effect>
            <DropShadowEffect Color="{DynamicResource ShadowColor}" BlurRadius="20" ShadowDepth="5" Opacity="0.5"/>
        </Border.Effect>

        <!-- 用于高度动画的容器 -->
        <Grid x:Name="ContentGrid" Margin="12,8" ClipToBounds="True">
            <!-- 最小化模式 -->
            <Grid x:Name="MinimizedContent" Visibility="Visible">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- 左侧图标 -->
                <Border Grid.Column="0"
                        Width="28" Height="28"
                        CornerRadius="14"
                        Background="{DynamicResource Background3Brush}"
                        Margin="0,0,8,0">
                    <Image x:Name="MinIcon"
                           Width="20" Height="20"
                           Stretch="Uniform"/>
                </Border>

                <!-- 中间标题 -->
                <TextBlock x:Name="MinTitle"
                           Grid.Column="1"
                           Text="通知"
                           Foreground="{DynamicResource Foreground1Brush}"
                           FontFamily="{DynamicResource FontPrimary}"
                           FontSize="{DynamicResource FontSizeSm}"
                           FontWeight="{DynamicResource FontWeightSemibold}"
                           VerticalAlignment="Center"
                           TextTrimming="CharacterEllipsis"
                           MaxWidth="180"/>

                <!-- 右侧提示图片 -->
                <Border Grid.Column="2"
                        Width="28" Height="28"
                        CornerRadius="{DynamicResource CornerRadiusMdAll}"
                        Margin="8,0,0,0"
                        Background="{DynamicResource Background3Brush}">
                    <Image x:Name="MinImage"
                           Width="20" Height="20"
                           Stretch="Uniform"/>
                </Border>
            </Grid>

            <!-- 展开模式 -->
            <Grid x:Name="ExpandedContent" Visibility="Collapsed">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- 第一行: 图标 + 标题 -->
                <Grid Grid.Row="0" Margin="0,0,0,8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- 图标 -->
                    <Border Grid.Column="0"
                            Width="36" Height="36"
                            CornerRadius="{DynamicResource CornerRadiusMdAll}"
                            Background="{DynamicResource Background3Brush}"
                            Margin="0,0,10,0">
                        <Image x:Name="ExpandIcon"
                               Width="28" Height="28"
                               Stretch="Uniform"/>
                    </Border>

                    <!-- 标题 -->
                    <TextBlock x:Name="ExpandTitle"
                               Grid.Column="1"
                               Text="通知标题"
                               Foreground="{DynamicResource Foreground1Brush}"
                               FontFamily="{DynamicResource FontPrimary}"
                               FontSize="{DynamicResource FontSizeMd}"
                               FontWeight="{DynamicResource FontWeightSemibold}"
                               VerticalAlignment="Center"
                               TextTrimming="CharacterEllipsis"/>
                </Grid>

                <!-- 第二行: 内容区域 -->
                <Border x:Name="ContentArea"
                        Grid.Row="1"
                        Margin="0,0,0,8"
                        MaxHeight="150">
                    <ScrollViewer VerticalScrollBarVisibility="Auto"
                                  HorizontalScrollBarVisibility="Disabled">
                        <!-- 内容容器 - 可以是 TextBlock 或自定义 UserControl -->
                        <ContentPresenter x:Name="ContentPresenter"/>
                    </ScrollViewer>
                </Border>

                <!-- 第三行: Hero 图片 (可选) -->
                <Border x:Name="HeroImageBorder"
                        Grid.Row="2"
                        CornerRadius="{DynamicResource CornerRadiusMdAll}"
                        Margin="0,0,0,8"
                        Visibility="Collapsed"
                        MaxHeight="150">
                    <Image x:Name="HeroImage"
                           Stretch="UniformToFill"/>
                </Border>

                <!-- 第四行: 操作按钮 -->
                <ItemsControl x:Name="ActionsPanel"
                              Grid.Row="3"
                              Visibility="Collapsed">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Horizontal"
                                        HorizontalAlignment="Right"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                </ItemsControl>
            </Grid>
        </Grid>
    </Border>
</Window>
