{
  "$schema": "https://phobos.lavirix.com/schemas/theme.json",
  "metadata": {
    "id": "com.phobos.theme.dark",
    "name": "Dark Theme",
    "version": "1.0.0",
    "author": "Phobos Team",
    "description": "Default dark theme for Phobos",
    "localizedNames": {
      "en-US": "Dark Theme",
      "zh-CN": "深色主题",
      "zh-TW": "深色主}",
      "ja-JP": "ダ`クテ`マ"
    }
  },
  "colors": {
    "primary": "#1E90FF",
    "primaryHover": "#1C86EE",
    "primaryPressed": "#1874CD",
    "secondary": "#6C757D",
    "success": "#28A745",
    "warning": "#FFC107",
    "danger": "#DC3545",
    "info": "#17A2B8",

    "background": "#1E1E1E",
    "backgroundAlt": "#252526",
    "backgroundHover": "#2D2D2D",
    "surface": "#2D2D2D",
    "surfaceHover": "#3C3C3C",

    "text": "#FFFFFF",
    "textSecondary": "#AAAAAA",
    "textDisabled": "#666666",
    "textInverse": "#000000",

    "border": "#3C3C3C",
    "borderLight": "#4A4A4A",
    "borderFocus": "#1E90FF",

    "scrollbar": "#4A4A4A",
    "scrollbarHover": "#5A5A5A",

    "shadow": "#00000080"
  },
  "fonts": {
    "family": "Segoe UI, Microsoft YaHei, sans-serif",
    "familyMono": "Consolas, Microsoft YaHei Mono, monospace",
    "sizeSmall": 11,
    "sizeNormal": 13,
    "sizeMedium": 15,
    "sizeLarge": 18,
    "sizeTitle": 24,
    "weightNormal": 400,
    "weightMedium": 500,
    "weightBold": 700
  },
  "dimensions": {
    "borderRadius": 4,
    "borderRadiusLarge": 8,
    "borderWidth": 1,
    "spacing": 8,
    "spacingSmall": 4,
    "spacingLarge": 16,

    "buttonHeight": 32,
    "buttonHeightSmall": 24,
    "buttonHeightLarge": 40,
    "buttonPadding": "8,16",

    "inputHeight": 32,
    "inputPadding": "6,10",

    "titleBarHeight": 32,
    "windowMinWidth": 400,
    "windowMinHeight": 300
  },
  "controls": {
    "button": {
      "background": "${colors.primary}",
      "backgroundHover": "${colors.primaryHover}",
      "backgroundPressed": "${colors.primaryPressed}",
      "backgroundDisabled": "${colors.secondary}",
      "foreground": "${colors.text}",
      "foregroundDisabled": "${colors.textDisabled}",
      "borderColor": "transparent",
      "borderRadius": "${dimensions.borderRadius}",
      "fontSize": "${fonts.sizeNormal}",
      "fontWeight": "${fonts.weightMedium}"
    },
    "buttonSecondary": {
      "background": "transparent",
      "backgroundHover": "${colors.backgroundHover}",
      "backgroundPressed": "${colors.surface}",
      "foreground": "${colors.text}",
      "borderColor": "${colors.border}"
    },
    "textBox": {
      "background": "${colors.backgroundAlt}",
      "backgroundFocused": "${colors.background}",
      "foreground": "${colors.text}",
      "foregroundPlaceholder": "${colors.textDisabled}",
      "borderColor": "${colors.border}",
      "borderColorFocused": "${colors.borderFocus}",
      "borderRadius": "${dimensions.borderRadius}",
      "fontSize": "${fonts.sizeNormal}"
    },
    "label": {
      "foreground": "${colors.text}",
      "foregroundSecondary": "${colors.textSecondary}",
      "fontSize": "${fonts.sizeNormal}"
    },
    "listBox": {
      "background": "${colors.backgroundAlt}",
      "foreground": "${colors.text}",
      "itemBackground": "transparent",
      "itemBackgroundHover": "${colors.backgroundHover}",
      "itemBackgroundSelected": "${colors.primary}",
      "itemForegroundSelected": "${colors.text}",
      "borderColor": "${colors.border}"
    },
    "scrollBar": {
      "background": "transparent",
      "thumbBackground": "${colors.scrollbar}",
      "thumbBackgroundHover": "${colors.scrollbarHover}",
      "width": 10,
      "thumbRadius": 5
    },
    "window": {
      "background": "${colors.background}",
      "titleBarBackground": "${colors.backgroundAlt}",
      "titleBarForeground": "${colors.text}",
      "borderColor": "${colors.border}",
      "shadowColor": "${colors.shadow}",
      "shadowBlurRadius": 20
    },
    "titleBarButton": {
      "background": "transparent",
      "backgroundHover": "${colors.backgroundHover}",
      "foreground": "${colors.textSecondary}",
      "foregroundHover": "${colors.text}",
      "closeBackgroundHover": "#E81123",
      "closeForegroundHover": "#FFFFFF"
    }
  },
  "animations": {
    "defaultDuration": 200,
    "fastDuration": 100,
    "slowDuration": 400,
    "easing": "CubicEaseOut",
    "enableAnimations": true,
    "windowOpenAnimation": {
      "type": "FadeIn,ScaleIn",
      "duration": 250,
      "easing": "CubicEaseOut"
    },
    "windowCloseAnimation": {
      "type": "FadeOut,ScaleOut",
      "duration": 200,
      "easing": "CubicEaseIn"
    },
    "buttonHoverAnimation": {
      "type": "ColorTransition",
      "duration": 150
    }
  }
}