{
  "$schema": "https://phobos.lavirix.com/schemas/themev2.json",
  "metadata": {
    "id": "com.phobos.theme.system-accent",
    "name": "System Accent",
    "version": "2.0.0",
    "author": "Phobos Team",
    "description": "Theme that follows Windows system accent color",
    "localizedNames": {
      "en-US": "System Accent",
      "zh-CN": "跟随系统",
      "zh-TW": "跟隨系統",
      "ja-JP": "システムカラー"
    }
  },
  "colors": {
    "foreground1": "#F5F5F5",
    "foreground2": "#E0E0E0",
    "foreground3": "#A0A0A0",
    "foreground4": "#6A6A6A",
    "foreground5": "#454545",

    "background1": "#0D0D0D",
    "background2": "#171717",
    "background3": "#212121",
    "background4": "#2B2B2B",
    "background5": "#363636",

    "primary": "${Phobos.SystemAccent}",
    "primaryHover": "${Phobos.SystemAccent}",
    "primaryPressed": "${Phobos.SystemAccent}",
    "primaryDisabled": "${Phobos.SystemAccent}60",

    "success": "#4ADE80",
    "warning": "#FBBF24",
    "danger": "#F87171",
    "info": "#60A5FA",

    "accent1": "#FB7185",
    "accent2": "#34D399",
    "accent3": "#A78BFA",
    "accent4": "#F472B6",
    "accent5": "#22D3EE",
    "accent6": "#A3E635",

    "border": "#2D2D2D",
    "borderLight": "#3D3D3D",
    "borderFocus": "${Phobos.SystemAccent}",

    "scrollbar": "#3D3D3D",
    "scrollbarHover": "#4D4D4D",
    "shadow": "#00000080",
    "overlay": "#00000060"
  },
  "fonts": {
    "primary": "Segoe UI, Microsoft YaHei, sans-serif",
    "secondary": "Arial, Helvetica, sans-serif",
    "mono": "Cascadia Code, Consolas, Microsoft YaHei Mono, monospace",

    "sizeXs": 10,
    "sizeSm": 12,
    "sizeMd": 14,
    "sizeLg": 16,
    "sizeXl": 20,
    "size2xl": 24,
    "size3xl": 32,

    "weightLight": 300,
    "weightNormal": 400,
    "weightMedium": 500,
    "weightSemibold": 600,
    "weightBold": 700,

    "lineHeightTight": 1.25,
    "lineHeightNormal": 1.5,
    "lineHeightRelaxed": 1.75
  },
  "dimensions": {
    "borderRadius": 6,
    "borderRadiusLarge": 10,
    "borderWidth": 1,
    "spacing": 8,
    "spacingSmall": 4,
    "spacingLarge": 16,
    "buttonHeight": 34,
    "buttonHeightSmall": 26,
    "buttonHeightLarge": 42,
    "buttonPadding": "8,18",
    "inputHeight": 34,
    "inputPadding": "8,12",
    "titleBarHeight": 32,
    "windowMinWidth": 400,
    "windowMinHeight": 300
  },
  "controls": {
    "button": {
      "background": "${colors.primary}",
      "backgroundHover": "${colors.primaryHover}",
      "backgroundPressed": "${colors.primaryPressed}",
      "backgroundDisabled": "${colors.primaryDisabled}",
      "foreground": "${Phobos.AdaptiveColor:${colors.primary}}",
      "foregroundDisabled": "${colors.foreground4}",
      "borderColor": "transparent",
      "borderRadius": "${dimensions.borderRadius}",
      "fontSize": "${fonts.sizeMd}",
      "fontWeight": "${fonts.weightMedium}"
    },
    "buttonSecondary": {
      "background": "transparent",
      "backgroundHover": "${colors.background4}",
      "backgroundPressed": "${colors.background5}",
      "foreground": "${colors.foreground1}",
      "borderColor": "${colors.border}"
    },
    "textBox": {
      "background": "${colors.background2}",
      "backgroundFocused": "${colors.background1}",
      "foreground": "${colors.foreground1}",
      "foregroundPlaceholder": "${colors.foreground4}",
      "borderColor": "${colors.border}",
      "borderColorFocused": "${colors.borderFocus}",
      "borderRadius": "${dimensions.borderRadius}",
      "fontSize": "${fonts.sizeMd}"
    },
    "label": {
      "foreground": "${colors.foreground1}",
      "foregroundSecondary": "${colors.foreground3}",
      "fontSize": "${fonts.sizeMd}"
    },
    "listBox": {
      "background": "${colors.background2}",
      "foreground": "${colors.foreground1}",
      "itemBackground": "transparent",
      "itemBackgroundHover": "${colors.background4}",
      "itemBackgroundSelected": "${colors.primary}",
      "itemForegroundSelected": "${Phobos.AdaptiveColor:${colors.primary}}",
      "borderColor": "${colors.border}"
    },
    "scrollBar": {
      "background": "transparent",
      "thumbBackground": "${colors.scrollbar}",
      "thumbBackgroundHover": "${colors.scrollbarHover}",
      "width": 10,
      "thumbRadius": 5
    },
    "window": {
      "background": "${colors.background1}",
      "titleBarBackground": "${colors.background2}",
      "titleBarForeground": "${colors.foreground1}",
      "borderColor": "${colors.border}",
      "shadowColor": "${colors.shadow}",
      "shadowBlurRadius": 20
    },
    "titleBarButton": {
      "background": "transparent",
      "backgroundHover": "${colors.background4}",
      "foreground": "${colors.foreground3}",
      "foregroundHover": "${colors.foreground1}",
      "closeBackgroundHover": "#F87171",
      "closeForegroundHover": "#FFFFFF"
    }
  },
  "animations": {
    "defaultDuration": 200,
    "fastDuration": 100,
    "slowDuration": 400,
    "easing": "CubicEaseOut",
    "enableAnimations": true
  }
}