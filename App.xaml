<Application x:Class="Phobos.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Phobos"
             Startup="Application_Startup">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Phobos;component/UI/Arcusrix/PhobosStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <!-- 默认字体 -->
            <FontFamily x:Key="DefaultFont">Segoe UI, Microsoft YaHei UI</FontFamily>
            <!-- 全局样式 -->
            <Style TargetType="Window">
                <Setter Property="FontFamily" Value="{StaticResource DefaultFont}"/>
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>
