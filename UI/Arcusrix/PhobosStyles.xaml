<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- 
    ============================================================
    Phobos UI - 主样式文件 (PhobosStyles.xaml)
    ============================================================
    此文件合并所有 Phobos UI 样式资源
    在 App.xaml 中引用此文件以应用所有样式
    
    使用方法:
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Phobos;component/UI/Arcusrix/PhobosStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
    ============================================================
    -->

    <ResourceDictionary.MergedDictionaries>
        <!-- 基础样式和回退颜色（必须最先加载） -->
        <ResourceDictionary Source="PhobosBaseStyles.xaml"/>

        <!-- 按钮样式 -->
        <ResourceDictionary Source="PhobosButtonStyles.xaml"/>

        <!-- 输入控件样式 (TextBox, PasswordBox) -->
        <ResourceDictionary Source="PhobosInputStyles.xaml"/>

        <!-- 滚动条样式 (必须在 SelectStyles 之前加载，因为 ComboBox 使用 ScrollViewer 样式) -->
        <ResourceDictionary Source="PhobosScrollBarStyles.xaml"/>

        <!-- 选择控件样式 (ComboBox, RadioButton, CheckBox) -->
        <ResourceDictionary Source="PhobosSelectStyles.xaml"/>

        <!-- 进度条和滑块样式 -->
        <ResourceDictionary Source="PhobosProgressStyles.xaml"/>

        <!-- 菜单样式 -->
        <ResourceDictionary Source="PhobosMenuStyles.xaml"/>

        <!-- 选项卡样式 -->
        <ResourceDictionary Source="PhobosTabStyles.xaml"/>

        <!-- 其他常用控件样式 -->
        <ResourceDictionary Source="PhobosCommonStyles.xaml"/>
    </ResourceDictionary.MergedDictionaries>

</ResourceDictionary>
