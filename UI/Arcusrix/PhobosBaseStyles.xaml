<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- 
    ============================================================
    Phobos UI - 基础样式 (PhobosBaseStyles.xaml)
    ============================================================
    此文件定义回退颜色和基础变量，确保在主题加载前程序不会崩溃
    所有控件样式都使用 DynamicResource，以便主题加载后自动更新
    ============================================================
    -->

    <!-- ============ 回退颜色定义 (Fallback Colors) ============ -->
    <!-- 这些颜色在主题加载前使用，主题加载后会被覆盖 -->
    
    <!-- 前景色 (5级) - 从深到浅 -->
    <Color x:Key="Foreground1Color">#FFFFFF</Color>
    <Color x:Key="Foreground2Color">#E0E0E0</Color>
    <Color x:Key="Foreground3Color">#A0A0A0</Color>
    <Color x:Key="Foreground4Color">#707070</Color>
    <Color x:Key="Foreground5Color">#505050</Color>

    <SolidColorBrush x:Key="Foreground1Brush" Color="{DynamicResource Foreground1Color}"/>
    <SolidColorBrush x:Key="Foreground2Brush" Color="{DynamicResource Foreground2Color}"/>
    <SolidColorBrush x:Key="Foreground3Brush" Color="{DynamicResource Foreground3Color}"/>
    <SolidColorBrush x:Key="Foreground4Brush" Color="{DynamicResource Foreground4Color}"/>
    <SolidColorBrush x:Key="Foreground5Brush" Color="{DynamicResource Foreground5Color}"/>

    <!-- 背景色 (5级) - 从深到浅 -->
    <Color x:Key="Background1Color">#0D0D0D</Color>
    <Color x:Key="Background2Color">#1A1A1A</Color>
    <Color x:Key="Background3Color">#2A2A2A</Color>
    <Color x:Key="Background4Color">#3A3A3A</Color>
    <Color x:Key="Background5Color">#4A4A4A</Color>

    <SolidColorBrush x:Key="Background1Brush" Color="{DynamicResource Background1Color}"/>
    <SolidColorBrush x:Key="Background2Brush" Color="{DynamicResource Background2Color}"/>
    <SolidColorBrush x:Key="Background3Brush" Color="{DynamicResource Background3Color}"/>
    <SolidColorBrush x:Key="Background4Brush" Color="{DynamicResource Background4Color}"/>
    <SolidColorBrush x:Key="Background5Brush" Color="{DynamicResource Background5Color}"/>

    <!-- 主题色 -->
    <Color x:Key="PrimaryColor">#1E90FF</Color>
    <Color x:Key="PrimaryHoverColor">#3DA0FF</Color>
    <Color x:Key="PrimaryPressedColor">#1874CD</Color>
    <Color x:Key="PrimaryDisabledColor">#1E90FF80</Color>

    <SolidColorBrush x:Key="PrimaryBrush" Color="{DynamicResource PrimaryColor}"/>
    <SolidColorBrush x:Key="PrimaryHoverBrush" Color="{DynamicResource PrimaryHoverColor}"/>
    <SolidColorBrush x:Key="PrimaryPressedBrush" Color="{DynamicResource PrimaryPressedColor}"/>
    <SolidColorBrush x:Key="PrimaryDisabledBrush" Color="{DynamicResource PrimaryDisabledColor}"/>

    <!-- 状态色 -->
    <Color x:Key="SuccessColor">#28A745</Color>
    <Color x:Key="WarningColor">#FFC107</Color>
    <Color x:Key="DangerColor">#DC3545</Color>
    <Color x:Key="InfoColor">#17A2B8</Color>

    <SolidColorBrush x:Key="SuccessBrush" Color="{DynamicResource SuccessColor}"/>
    <SolidColorBrush x:Key="WarningBrush" Color="{DynamicResource WarningColor}"/>
    <SolidColorBrush x:Key="DangerBrush" Color="{DynamicResource DangerColor}"/>
    <SolidColorBrush x:Key="InfoBrush" Color="{DynamicResource InfoColor}"/>

    <!-- 边框色 -->
    <Color x:Key="BorderColor">#3C3C3C</Color>
    <Color x:Key="BorderLightColor">#4A4A4A</Color>
    <Color x:Key="BorderFocusColor">#1E90FF</Color>

    <SolidColorBrush x:Key="BorderBrush" Color="{DynamicResource BorderColor}"/>
    <SolidColorBrush x:Key="BorderLightBrush" Color="{DynamicResource BorderLightColor}"/>
    <SolidColorBrush x:Key="BorderFocusBrush" Color="{DynamicResource BorderFocusColor}"/>

    <!-- 滚动条颜色 -->
    <Color x:Key="ScrollbarColor">#4A4A4A</Color>
    <Color x:Key="ScrollbarHoverColor">#5A5A5A</Color>

    <SolidColorBrush x:Key="ScrollbarBrush" Color="{DynamicResource ScrollbarColor}"/>
    <SolidColorBrush x:Key="ScrollbarHoverBrush" Color="{DynamicResource ScrollbarHoverColor}"/>

    <!-- 遮罩和阴影 -->
    <Color x:Key="OverlayColor">#80000000</Color>
    <Color x:Key="ShadowColor">#40000000</Color>

    <SolidColorBrush x:Key="OverlayBrush" Color="{DynamicResource OverlayColor}"/>
    <SolidColorBrush x:Key="ShadowBrush" Color="{DynamicResource ShadowColor}"/>

    <!-- ============ 字体定义 ============ -->
    <FontFamily x:Key="FontPrimary">Segoe UI, Microsoft YaHei UI, sans-serif</FontFamily>
    <FontFamily x:Key="FontSecondary">Segoe UI, Microsoft YaHei UI, sans-serif</FontFamily>
    <FontFamily x:Key="FontMono">Cascadia Code, Consolas, monospace</FontFamily>

    <!-- 字号 -->
    <sys:Double x:Key="FontSizeXs" xmlns:sys="clr-namespace:System;assembly=mscorlib">10</sys:Double>
    <sys:Double x:Key="FontSizeSm" xmlns:sys="clr-namespace:System;assembly=mscorlib">12</sys:Double>
    <sys:Double x:Key="FontSizeMd" xmlns:sys="clr-namespace:System;assembly=mscorlib">14</sys:Double>
    <sys:Double x:Key="FontSizeLg" xmlns:sys="clr-namespace:System;assembly=mscorlib">16</sys:Double>
    <sys:Double x:Key="FontSizeXl" xmlns:sys="clr-namespace:System;assembly=mscorlib">20</sys:Double>
    <sys:Double x:Key="FontSize2xl" xmlns:sys="clr-namespace:System;assembly=mscorlib">24</sys:Double>
    <sys:Double x:Key="FontSize3xl" xmlns:sys="clr-namespace:System;assembly=mscorlib">32</sys:Double>

    <!-- 字重 -->
    <FontWeight x:Key="FontWeightLight">Light</FontWeight>
    <FontWeight x:Key="FontWeightNormal">Normal</FontWeight>
    <FontWeight x:Key="FontWeightMedium">Medium</FontWeight>
    <FontWeight x:Key="FontWeightSemibold">SemiBold</FontWeight>
    <FontWeight x:Key="FontWeightBold">Bold</FontWeight>

    <!-- ============ 尺寸变量 ============ -->
    <sys:Double x:Key="CornerRadiusXs" xmlns:sys="clr-namespace:System;assembly=mscorlib">2</sys:Double>
    <sys:Double x:Key="CornerRadiusSm" xmlns:sys="clr-namespace:System;assembly=mscorlib">4</sys:Double>
    <sys:Double x:Key="CornerRadiusMd" xmlns:sys="clr-namespace:System;assembly=mscorlib">6</sys:Double>
    <sys:Double x:Key="CornerRadiusLg" xmlns:sys="clr-namespace:System;assembly=mscorlib">8</sys:Double>
    <sys:Double x:Key="CornerRadiusXl" xmlns:sys="clr-namespace:System;assembly=mscorlib">12</sys:Double>

    <CornerRadius x:Key="CornerRadiusXsAll">2</CornerRadius>
    <CornerRadius x:Key="CornerRadiusSmAll">4</CornerRadius>
    <CornerRadius x:Key="CornerRadiusMdAll">6</CornerRadius>
    <CornerRadius x:Key="CornerRadiusLgAll">8</CornerRadius>
    <CornerRadius x:Key="CornerRadiusXlAll">12</CornerRadius>

    <!-- 控件高度 -->
    <sys:Double x:Key="ControlHeightSm" xmlns:sys="clr-namespace:System;assembly=mscorlib">28</sys:Double>
    <sys:Double x:Key="ControlHeightMd" xmlns:sys="clr-namespace:System;assembly=mscorlib">36</sys:Double>
    <sys:Double x:Key="ControlHeightLg" xmlns:sys="clr-namespace:System;assembly=mscorlib">44</sys:Double>

    <!-- 间距 -->
    <Thickness x:Key="PaddingXs">4</Thickness>
    <Thickness x:Key="PaddingSm">8</Thickness>
    <Thickness x:Key="PaddingMd">12</Thickness>
    <Thickness x:Key="PaddingLg">16</Thickness>
    <Thickness x:Key="PaddingXl">24</Thickness>

    <!-- 输入框内边距 -->
    <Thickness x:Key="InputPaddingSm">8,4</Thickness>
    <Thickness x:Key="InputPaddingMd">12,8</Thickness>
    <Thickness x:Key="InputPaddingLg">16,10</Thickness>

    <!-- ============ 动画时长 ============ -->
    <Duration x:Key="AnimationFast">0:0:0.15</Duration>
    <Duration x:Key="AnimationNormal">0:0:0.25</Duration>
    <Duration x:Key="AnimationSlow">0:0:0.35</Duration>

    <!-- ============ 透明画刷 ============ -->
    <SolidColorBrush x:Key="TransparentBrush" Color="Transparent"/>

</ResourceDictionary>
