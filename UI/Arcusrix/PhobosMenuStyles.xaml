<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- 
    ============================================================
    Phobos UI - 菜单样式 (PhobosMenuStyles.xaml)
    ============================================================
    包含: ContextMenu, MenuItem, Menu, Separator
    ============================================================
    -->

    <!-- ============ 菜单分隔符样式 ============ -->
    <Style x:Key="PhobosMenuSeparator" TargetType="Separator">
        <Setter Property="Background" Value="{DynamicResource BorderBrush}"/>
        <Setter Property="Margin" Value="8,4"/>
        <Setter Property="Height" Value="1"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Separator">
                    <Border Background="{TemplateBinding Background}"
                            Height="{TemplateBinding Height}"
                            Margin="{TemplateBinding Margin}"/>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- ============ 右键菜单样式 ============ -->
    <Style x:Key="PhobosContextMenu" TargetType="ContextMenu">
        <Setter Property="Background" Value="{DynamicResource Background2Brush}"/>
        <Setter Property="Foreground" Value="{DynamicResource Foreground1Brush}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="FontFamily" Value="{DynamicResource FontPrimary}"/>
        <Setter Property="FontSize" Value="{DynamicResource FontSizeMd}"/>
        <Setter Property="Padding" Value="4"/>
        <Setter Property="HasDropShadow" Value="True"/>
        <Setter Property="SnapsToDevicePixels" Value="True"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ContextMenu">
                    <Border x:Name="Border"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="{DynamicResource CornerRadiusLgAll}"
                            Padding="{TemplateBinding Padding}">
                        <Border.Effect>
                            <DropShadowEffect Color="Black" BlurRadius="20" ShadowDepth="4" Opacity="0.35"/>
                        </Border.Effect>
                        <Border.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform x:Name="MenuScale" ScaleX="1" ScaleY="1"/>
                                <TranslateTransform x:Name="MenuTranslate" Y="0"/>
                            </TransformGroup>
                        </Border.RenderTransform>
                        <Border.RenderTransformOrigin>
                            <Point X="0.5" Y="0"/>
                        </Border.RenderTransformOrigin>
                        <StackPanel IsItemsHost="True" KeyboardNavigation.DirectionalNavigation="Cycle"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <!-- 打开动画 -->
                        <EventTrigger RoutedEvent="Opened">
                            <BeginStoryboard>
                                <Storyboard>
                                    <DoubleAnimation Storyboard.TargetName="Border"
                                                     Storyboard.TargetProperty="Opacity"
                                                     From="0" To="1" Duration="0:0:0.15">
                                        <DoubleAnimation.EasingFunction>
                                            <CubicEase EasingMode="EaseOut"/>
                                        </DoubleAnimation.EasingFunction>
                                    </DoubleAnimation>
                                    <DoubleAnimation Storyboard.TargetName="MenuScale"
                                                     Storyboard.TargetProperty="ScaleY"
                                                     From="0.95" To="1" Duration="0:0:0.2">
                                        <DoubleAnimation.EasingFunction>
                                            <CubicEase EasingMode="EaseOut"/>
                                        </DoubleAnimation.EasingFunction>
                                    </DoubleAnimation>
                                    <DoubleAnimation Storyboard.TargetName="MenuTranslate"
                                                     Storyboard.TargetProperty="Y"
                                                     From="-8" To="0" Duration="0:0:0.2">
                                        <DoubleAnimation.EasingFunction>
                                            <CubicEase EasingMode="EaseOut"/>
                                        </DoubleAnimation.EasingFunction>
                                    </DoubleAnimation>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- ============ 菜单项样式 ============ -->
    <Style x:Key="PhobosMenuItem" TargetType="MenuItem">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="{DynamicResource Foreground1Brush}"/>
        <Setter Property="FontFamily" Value="{DynamicResource FontPrimary}"/>
        <Setter Property="FontSize" Value="{DynamicResource FontSizeMd}"/>
        <Setter Property="Padding" Value="12,10"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="MenuItem">
                    <Border x:Name="Border"
                            Background="{TemplateBinding Background}"
                            CornerRadius="{DynamicResource CornerRadiusSmAll}"
                            Padding="{TemplateBinding Padding}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" SharedSizeGroup="Icon"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto" SharedSizeGroup="Shortcut"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <!-- 图标 -->
                            <ContentPresenter x:Name="Icon"
                                              Grid.Column="0"
                                              ContentSource="Icon"
                                              VerticalAlignment="Center"
                                              Width="16"
                                              Height="16"
                                              Margin="0,0,12,0"/>
                            <!-- 勾选标记 -->
                            <Border x:Name="CheckMark"
                                    Grid.Column="0"
                                    Width="16"
                                    Height="16"
                                    Margin="0,0,12,0"
                                    Visibility="Collapsed"
                                    VerticalAlignment="Center">
                                <Path Data="M 0 4 L 3 7 L 8 0"
                                      Stroke="{DynamicResource PrimaryBrush}"
                                      StrokeThickness="2"
                                      StrokeStartLineCap="Round"
                                      StrokeEndLineCap="Round"
                                      StrokeLineJoin="Round"/>
                            </Border>
                            <!-- 标题 -->
                            <ContentPresenter x:Name="HeaderHost"
                                              Grid.Column="1"
                                              ContentSource="Header"
                                              VerticalAlignment="Center"
                                              RecognizesAccessKey="True"/>
                            <!-- 快捷键 -->
                            <TextBlock x:Name="InputGestureText"
                                       Grid.Column="2"
                                       Text="{TemplateBinding InputGestureText}"
                                       Foreground="{DynamicResource Foreground4Brush}"
                                       FontSize="{DynamicResource FontSizeSm}"
                                       VerticalAlignment="Center"
                                       Margin="24,0,0,0"/>
                            <!-- 子菜单箭头 -->
                            <Path x:Name="SubMenuArrow"
                                  Grid.Column="3"
                                  Data="M 0 0 L 4 4 L 0 8"
                                  Fill="{DynamicResource Foreground4Brush}"
                                  VerticalAlignment="Center"
                                  Margin="12,0,0,0"
                                  Visibility="Collapsed"/>
                        </Grid>
                    </Border>
                    <ControlTemplate.Triggers>
                        <!-- 无图标时隐藏图标区域 -->
                        <Trigger Property="Icon" Value="{x:Null}">
                            <Setter TargetName="Icon" Property="Visibility" Value="Collapsed"/>
                        </Trigger>
                        <!-- 勾选状态 -->
                        <Trigger Property="IsChecked" Value="True">
                            <Setter TargetName="CheckMark" Property="Visibility" Value="Visible"/>
                            <Setter TargetName="Icon" Property="Visibility" Value="Collapsed"/>
                        </Trigger>
                        <!-- 有子菜单时显示箭头 -->
                        <Trigger Property="Role" Value="SubmenuHeader">
                            <Setter TargetName="SubMenuArrow" Property="Visibility" Value="Visible"/>
                        </Trigger>
                        <!-- 悬停效果 -->
                        <Trigger Property="IsHighlighted" Value="True">
                            <Setter TargetName="Border" Property="Background" Value="{DynamicResource Background3Brush}"/>
                        </Trigger>
                        <!-- 禁用效果 -->
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Foreground" Value="{DynamicResource Foreground5Brush}"/>
                            <Setter Property="Cursor" Value="Arrow"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- ============ 危险菜单项样式 ============ -->
    <Style x:Key="PhobosMenuItemDanger" TargetType="MenuItem" BasedOn="{StaticResource PhobosMenuItem}">
        <Setter Property="Foreground" Value="{DynamicResource DangerBrush}"/>
        <Style.Triggers>
            <Trigger Property="IsHighlighted" Value="True">
                <Setter Property="Background" Value="#1ADC3545"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- ============ 顶部菜单栏样式 ============ -->
    <Style x:Key="PhobosMenu" TargetType="Menu">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="{DynamicResource Foreground1Brush}"/>
        <Setter Property="FontFamily" Value="{DynamicResource FontPrimary}"/>
        <Setter Property="FontSize" Value="{DynamicResource FontSizeMd}"/>
    </Style>

    <!-- ============ 顶部菜单项样式 ============ -->
    <Style x:Key="PhobosTopLevelMenuItem" TargetType="MenuItem">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="{DynamicResource Foreground2Brush}"/>
        <Setter Property="Padding" Value="12,8"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="MenuItem">
                    <Border x:Name="Border"
                            Background="{TemplateBinding Background}"
                            CornerRadius="{DynamicResource CornerRadiusSmAll}"
                            Padding="{TemplateBinding Padding}">
                        <ContentPresenter ContentSource="Header" RecognizesAccessKey="True"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsHighlighted" Value="True">
                            <Setter TargetName="Border" Property="Background" Value="{DynamicResource Background3Brush}"/>
                            <Setter Property="Foreground" Value="{DynamicResource Foreground1Brush}"/>
                        </Trigger>
                        <Trigger Property="IsSubmenuOpen" Value="True">
                            <Setter TargetName="Border" Property="Background" Value="{DynamicResource Background3Brush}"/>
                            <Setter Property="Foreground" Value="{DynamicResource Foreground1Brush}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
