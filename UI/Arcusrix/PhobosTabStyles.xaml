<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- 
    ============================================================
    Phobos UI - 选项卡样式 (PhobosTabStyles.xaml)
    ============================================================
    包含: TabControl, TabItem
    ============================================================
    -->

    <!-- ============ 选项卡控件样式 ============ -->
    <Style x:Key="PhobosTabControl" TargetType="TabControl">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="{DynamicResource Foreground1Brush}"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="0"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="TabControl">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <!-- 选项卡头部 -->
                        <Border Grid.Row="0"
                                Background="{DynamicResource Background2Brush}"
                                CornerRadius="8"
                                Padding="4"
                                Margin="0,0,0,16">
                            <TabPanel x:Name="HeaderPanel"
                                      IsItemsHost="True"
                                      KeyboardNavigation.TabIndex="1"/>
                        </Border>
                        <!-- 内容区域 -->
                        <Border Grid.Row="1"
                                Background="{DynamicResource Background2Brush}"
                                CornerRadius="{DynamicResource CornerRadiusLgAll}"
                                Padding="16">
                            <ContentPresenter x:Name="PART_SelectedContentHost"
                                              ContentSource="SelectedContent"/>
                        </Border>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- ============ 选项卡项样式 ============ -->
    <Style x:Key="PhobosTabItem" TargetType="TabItem">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="{DynamicResource Foreground3Brush}"/>
        <Setter Property="FontFamily" Value="{DynamicResource FontPrimary}"/>
        <Setter Property="FontSize" Value="{DynamicResource FontSizeMd}"/>
        <Setter Property="Padding" Value="16,10"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="TabItem">
                    <Grid>
                        <Border x:Name="Border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="{DynamicResource CornerRadiusSmAll}"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter x:Name="ContentSite"
                                              ContentSource="Header"
                                              VerticalAlignment="Center"
                                              HorizontalAlignment="Center"/>
                        </Border>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="Border" Property="Background" Value="{DynamicResource Background3Brush}"/>
                            <Setter Property="Foreground" Value="{DynamicResource Foreground2Brush}"/>
                        </Trigger>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter TargetName="Border" Property="Background" Value="{DynamicResource PrimaryBrush}"/>
                            <Setter Property="Foreground" Value="White"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- ============ 下划线选项卡样式 ============ -->
    <Style x:Key="PhobosTabControlUnderline" TargetType="TabControl">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="TabControl">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <!-- 选项卡头部 -->
                        <Border Grid.Row="0"
                                BorderBrush="{DynamicResource BorderBrush}"
                                BorderThickness="0,0,0,1"
                                Margin="0,0,0,16">
                            <TabPanel IsItemsHost="True"/>
                        </Border>
                        <!-- 内容 -->
                        <ContentPresenter Grid.Row="1" ContentSource="SelectedContent"/>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="PhobosTabItemUnderline" TargetType="TabItem">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="{DynamicResource Foreground3Brush}"/>
        <Setter Property="FontFamily" Value="{DynamicResource FontPrimary}"/>
        <Setter Property="FontSize" Value="{DynamicResource FontSizeMd}"/>
        <Setter Property="Padding" Value="16,12"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="TabItem">
                    <Grid>
                        <Border x:Name="Border" Padding="{TemplateBinding Padding}">
                            <ContentPresenter ContentSource="Header"
                                              VerticalAlignment="Center"
                                              HorizontalAlignment="Center"/>
                        </Border>
                        <!-- 下划线指示器 -->
                        <Border x:Name="Indicator"
                                Height="2"
                                VerticalAlignment="Bottom"
                                Background="{DynamicResource PrimaryBrush}"
                                CornerRadius="1"
                                Margin="8,0"
                                Opacity="0">
                            <Border.RenderTransform>
                                <ScaleTransform x:Name="IndicatorScale" ScaleX="0" CenterX="0.5"/>
                            </Border.RenderTransform>
                        </Border>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Foreground" Value="{DynamicResource Foreground1Brush}"/>
                        </Trigger>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="Foreground" Value="{DynamicResource PrimaryBrush}"/>
                            <Setter TargetName="Indicator" Property="Opacity" Value="1"/>
                            <Trigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="IndicatorScale"
                                                         Storyboard.TargetProperty="ScaleX"
                                                         From="0" To="1" Duration="0:0:0.25">
                                            <DoubleAnimation.EasingFunction>
                                                <CubicEase EasingMode="EaseOut"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.EnterActions>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
